<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- PDC Form Wizard -->
    <record id="sh_pdc_payment_form_view" model="ir.ui.view">
        <field name="name">sh.pdc.wizard</field>
        <field name="model">pdc.wizard</field>
        <field name="arch" type="xml">
            <form string="PDC Payment">
                <header>
                    <button name="action_register"
                            class="oe_highlight"
                            invisible="state != 'draft'"
                            string="Register"
                            type="object"/>

                     <button name="action_clear_pdc"
                             class="oe_highlight"
                             invisible="state != 'registered'"
                             string="Cleared"
                             type="object"/>

                     <button name="action_pdc_bounced"
                             class="oe_highlight"
                             invisible="state != 'registered'"
                             string="Bounced"
                             type="object"/>

                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_manual_reconciliation_widget" type="object"
                        string="Payment Matching" class="oe_stat_button" icon="fa-dollar"
                        invisible="is_reconciled or state == 'draft'"/>

                    </div>

                    <group>
                        <group>
                            <field name="name" readonly="1" />
                            <field name="payment_type" widget="radio" />
                            <field name="currency_id" column_invisible="True"/>
                            <field name="partner_id" />
                            <field name='company_id' column_invisible="True"/>
                            <field name="payment_amount" widget="monetary" />
                            <field name="reference"/>
                            <field name="journal_id" options="{'no_create':1,'no_create_edit':1}" />
                        </group>
                        <group>
                            <field name="is_reconciled" column_invisible="True"/>
                            <field name="payment_date" />
                            <field name="cheque_date"/>
                            <field name="cheque_clearing_date"/>
                            <field name="memo" />
                            <field name="deposit_journal_id"
                                   string="Bank"
                                   options="{'no_create':1,'no_create_edit':1}"/>
                            <field name="bounced_pdc"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Accounting Entries">
                            <group>
                                <field name="move_register_id" readonly="1"/>
                                <field name="move_cleared_id" readonly="1"/>
                                <field name="move_bounced_id" readonly="1"/>
                            </group>
                            <group string="Reconciled Move before Bouncing"  invisible="state != 'bounced'">
                                <field name="original_reconciled_moves" readonly="1" nolabel="1">
                                    <tree>
                                        <field name="move_id"/>
                                        <field name="account_id"/>
                                        <field name="partner_id"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- PDC Tree view -->
    <record id="sh_pdc_tree_form" model="ir.ui.view">
        <field name="name">sh.pdc.tree.view</field>
        <field name="model">pdc.wizard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="currency_id" column_invisible="True"/>
                <field name="payment_date" />
                <field name="name" />
                <field name="journal_id" />
                <field name="partner_id" />
                <field name="payment_amount" sum="Total"/><field name="state" />
            </tree>
        </field>
    </record>
    <!-- PDC Filter -->
    <record id="view_sh_pdc_filter" model="ir.ui.view">
        <field name="name">pdc.payment.select</field>
        <field name="model">pdc.wizard</field>
        <field name="arch" type="xml">
            <search string="Search PDC Payment">
                <filter name="draft" string="Draft" domain="[('state','=','draft')]" />
                <filter name="registered" string="Registered" domain="[('state','=','registered')]" />
                <filter name="returned" string="Returned" domain="[('state','=','returned')]" />
                <filter name="deposited" string="Deposited" domain="[('state','=','deposited')]" />
                <filter name="bounced" string="Bounced" domain="[('state','=','bounced')]" />
                <filter name="bounced" string="Bounced" domain="[('state','=','bounced')]" />
                <filter name="cancel" string="Cancelled" domain="[('state','=','cancel')]" />
                <filter name="customer" string="Customer" domain="[('partner_id.customer_rank','&gt;', 0)]"/>
               	<filter name="partner" string="Supplier" domain="[('partner_id.supplier_rank','&gt;', 0)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_partner_id" string="Partner" context="{'group_by':'partner_id'}" />
                    <filter name="status" string="Status" context="{'group_by':'state'}" />
                    <separator />
                    <filter string="Cheque Received Date" name="payment_date" context="{'group_by':'payment_date'}" />
                    <filter string="Due Date" name="cheque_date" context="{'group_by':'cheque_date'}" />
                    <filter string="Cheque Clearing Date" name="cheque_clearing_date" context="{'group_by':'cheque_clearing_date'}" />
                    <separator />
                    <filter string="Journal" name="journal_id" context="{'group_by':'journal_id'}" />
                    <filter string="Bank" name="deposit_journal_id" context="{'group_by':'deposit_journal_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="sh_pdc_payment_menu_action" model="ir.actions.act_window">
        <field name="name">PDC Cheque Payment</field>
        <field name="res_model">pdc.wizard</field>
        <field name="view_mode">tree,form</field>
        <field
            name="view_ids"
            eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('sh_pdc_tree_form')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('sh_pdc_payment_form_view')})]"
        />
    </record>


    <menuitem id="menu_pdc_payment"
              name="PDC payment"
              groups="account.group_account_invoice"
              parent="account.menu_finance_receivables"
              sequence="25"
              action="sh_pdc_payment_menu_action" />


</odoo>
