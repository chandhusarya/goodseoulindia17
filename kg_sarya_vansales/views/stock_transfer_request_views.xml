<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_stock_transfer_request_tree" model="ir.ui.view">
        <field name="name">stock.transfer.request.tree</field>
        <field name="model">stock.transfer.request</field>
        <field name="arch" type="xml">
            <tree string="Load Request" create="0" delete="0" decoration-muted="state == 'cancel'">
                <field name="name"/>
                <field name="user_id"/>
                <field name="vehicle_id" />
                <field name="expected_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_transfer_request_search">
        <field name="name">stock.transfer.request.search</field>
        <field name="model">stock.transfer.request</field>
        <field name="arch" type="xml">
            <search string="Load Request Search">
                <field name="name" string="Stock Transfer Request"/>
            </search>
        </field>
    </record>

    <record id="view_stock_transfer_request_form" model="ir.ui.view">
        <field name="name">stock.transfer.request.form</field>
        <field name="model">stock.transfer.request</field>
        <field name="arch" type="xml">
            <form string="Load Request" create="0" delete="0">
                <header>
                    <button name="action_approve" string="Approve" class="oe_highlight" type="object"
                            confirm="Are you verified requested quantities?"
                            invisible="state not in ['request']"/>
                    <button name="action_cancel"
                            string="Cancel Request"
                            type="object"
                            confirm="Are you sure to cancel request?"
                            invisible="state not in ['request', 'draft', 'approve']"/>

                    <button name="view_current_stock"
                            string="View Stock in Main Location"
                            type="object"
                            invisible="state not in ['request', 'draft', 'approve']"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,request,approve"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="picking_ids" invisible="True"/>
                        <button type="object" name="action_view_transfer" class="oe_stat_button" icon="fa-truck"
                                invisible="picking_count == 0" groups="stock.group_stock_user">
                            <field name="picking_count" widget="statinfo" string="Transfers"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Reference #"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="expected_date"/>
                            <field name="van_main_location_id" readonly="state not in ['request']"/>
                        </group>
                        <group>
                            <field name="vehicle_id" readonly="1"/>
                            <field name="location_id" invisible="True"/>
                            <field name="company_id" invisible="True"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="line_ids">
                                <tree string="Products" editable="bottom">
                                    <field name="product_id" readonly="1" options="{'no_create': True, 'no_create_edit':True}"/>
                                    <field name="available_stock_on_primary" readonly="1" string="Stock in Van"/>
                                    <field name="available_stock" column_invisible="True" string="Stock in Van"/>
                                    <field name="available_stock_on_main" readonly="1" />
                                    <field name="product_packaging_id" string="Req UOM" readonly="1"/>
                                    <field name="requested_qty" readonly="1" string="Req Qty"/>
                                     <field name="requested_qty_primary" string="Req Qty Primary" readonly="1" />
                                    <field name="product_qty" readonly="state not in ['request']"/>
                                    <field name="product_qty_req_packaging" column_invisible="True" />
                                    <field name="state" column_invisible="True"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="notes" readonly="1" nolabel="1" placeholder="Additional notes..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_stock_transfer_request" model="ir.actions.act_window">
        <field name="name">Load Request</field>
        <field name="res_model">stock.transfer.request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="view_id" ref="view_stock_transfer_request_tree"/>
        <field name="search_view_id" ref="stock_transfer_request_search"/>
    </record>

    <menuitem name="Stock Operations"
              id="menu_stock_transfer_request_main"
              sequence="5"
	          parent="van_sale_menu_root" />
    <menuitem id="menu_stock_transfer_request"
              parent="menu_stock_transfer_request_main"
              name="Load Request"
              sequence="1"
              action="action_stock_transfer_request"/>

</odoo>
