<!--<?xml version="1.0" encoding="utf-8"?>-->
<odoo>

	<record id="view_user_inherit" model="ir.ui.view">
		<field name="name">res.users.inherit</field>
		<field name="model">res.users</field>
		<field name="inherit_id" ref="base.view_users_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@class='oe_title']" position='after'>
				<group><field name="is_driver" string="Driver"/></group>
			</xpath>
		</field>
	</record>


	<!-- driver master -->
	<record id="driver_master_menu_action" model="ir.actions.act_window">
		<field name="name">Drivers</field>
		<field name="res_model">res.users</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[('is_driver', '=', True)]</field>
		<field name="context">{'default_is_driver': True}</field>
	</record>

	<record model="ir.actions.act_window.view" id="act_driver_tree_view">
		<field eval="1" name="sequence"/>
		<field name="view_mode">tree</field>
		<field name="view_id" ref="base.view_users_tree"/>
		<field name="act_window_id" ref="driver_master_menu_action"/>
	</record>

	<record model="ir.actions.act_window.view" id="act_driver_form_view">
		<field eval="2" name="sequence"/>
		<field name="view_mode">form</field>
		<field name="view_id" ref="base.view_users_form"/>
		<field name="act_window_id" ref="driver_master_menu_action"/>
	</record>

	<menuitem id="van_sale_menu_root"
	          name="Van Sales"
	          web_icon="kg_sarya_vansales,static/img/icon.png"
	          sequence="7" groups="group_show_van_sales_menu"/>
	<menuitem name="Configuration" id="van_sale_conf_menu" sequence="100" parent="van_sale_menu_root"/>
	<menuitem name="Drivers" id="driver_menu" action="driver_master_menu_action" sequence="1" parent="van_sale_conf_menu"/>

</odoo>