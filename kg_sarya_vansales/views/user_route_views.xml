<!--<?xml version="1.0" encoding="utf-8"?>-->
<odoo>

	<record id="user_route_tree" model="ir.ui.view">
		<field name="name">user.route.tree</field>
		<field name="model">user.route</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" required="1"/>
			</tree>
		</field>
	</record>

	<record id="user_route_form" model="ir.ui.view">
		<field name="name">user.route.form</field>
		<field name="model">user.route</field>
		<field name="arch" type="xml">
			<form string="Route">
				<sheet>
					<widget name="web_ribbon" title="Archived" bg_color="bg-danger"
							invisible="active"/>
					<div class="oe_button_box" name="button_box">
						<button name="action_view_customer" type="object" class="oe_stat_button" icon="fa-th-list"
								invisible="customer_count == 0">
							<field name="customer_count" widget="statinfo" string="Customers"/>
						</button>
					</div>

					<div class="oe_title">
						<field name="active" invisible="True"/>
						<h1><field name="name" placeholder="Route Name"/></h1>
					</div>
					<group>
						<group>
							<field name="vehicle_id" required="1"/>
						</group>
					</group>
					<notebook>
						<page name="region" string="Regions">
							<field name="region_lines">
								<tree string="Regions" editable="bottom">
									<field name="name" required="1" string="Region"/>
									<field name="code"/>
									<field name="subregion_lines" widget="many2many_tags" context="{'default_region': active_id}"/>
								</tree>
							</field>
						</page>
						<page name="description" string="Description">
							<group>
								<field name="description" nolabel="1" placeholder="Enter more details of this route"/>
							</group>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="user_route_action" model="ir.actions.act_window">
		<field name="name">Route</field>
		<field name="res_model">user.route</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem name="Sales Route" id="user_route_main_menu" action="user_route_action" sequence="3"
	          parent="van_sale_menu_root"/>
	<menuitem name="Routes" id="user_route_menu" action="user_route_action" sequence="3"
	          parent="user_route_main_menu"/>

</odoo>

