<!--<?xml version="1.0" encoding="utf-8"?>-->
<odoo>

	<record id="customer_visit_log_tree" model="ir.ui.view">
		<field name="name">customer.visit.log.tree</field>
		<field name="model">customer.visit.log</field>
		<field name="arch" type="xml">
			<tree string="Customer Visit Log" create="false" edit="false">
				<field name="visit_date_time"/>
				<field name="partner_id"/>
				<field name="user_id"/>
				<field name="vehicle_no"/>
			</tree>
		</field>
	</record>

	<record id="customer_visit_log_form" model="ir.ui.view">
		<field name="name">customer.visit.log.form</field>
		<field name="model">customer.visit.log</field>
		<field name="arch" type="xml">
			<form string="Customer Visit Log" create="false" edit="false">
				<sheet>
					<group>
						<group>
							<field name="partner_id"/>
							<field name="user_id"/>
						</group>
						<group>
							<field name="visit_date_time"/>
							<field name="vehicle_no"/>
						</group>
					</group>
					<group>
						<field name="remarks"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="customer_visit_log_filter" model="ir.ui.view">
		<field name="name">customer.visit.log.search</field>
		<field name="model">customer.visit.log</field>
		<field name="arch" type="xml">
			<search string="Customer Visit Log">
				<field name="name" string="Name"/>
				<field name="partner_id"/>
				<field name="user_id"/>
				<field name="vehicle_no"/>
				<group expand="0" string="Group By">
					<filter string="Customer" name="customer" context="{'group_by': 'partner_id'}"/>
					<filter string="Salesperson" name="user" context="{'group_by': 'user_id'}"/>
					<filter string="Van No." name="vehicle" context="{'group_by': 'vehicle_no'}"/>
					<filter string="Visit Date" name="visit_date" context="{'group_by': 'visit_date:month'}"/>
				</group>
			</search>
		</field>
	</record>

	<record id="customer_visit_log_action" model="ir.actions.act_window">
		<field name="name">Customer Visit Log</field>
		<field name="res_model">customer.visit.log</field>
		<field name="view_mode">tree,form</field>
		<field name="context">
			{
				'search_default_user': 1
			}
		</field>
	</record>
<!-- 
	<menuitem name="Customer Visit Log" id="customer_visit_log_menu" action="customer_visit_log_action" sequence="15"
	          parent="van_sale_history_menu"/> -->

</odoo>

