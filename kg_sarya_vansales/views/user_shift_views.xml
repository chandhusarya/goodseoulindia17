<!--<?xml version="1.0" encoding="utf-8"?>-->
<odoo>

    <record id="user_shift_view_tree" model="ir.ui.view">
        <field name="name">user.shift.tree</field>
        <field name="model">user.shift</field>
        <field name="arch" type="xml">
            <tree string="Shift" create="false" edit="false">
                <field name="date"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="route_id"/>
                <field name="plan_id"/>
                <field name="vehicle_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="user_shift_view_form" model="ir.ui.view">
        <field name="name">user.shift.form</field>
        <field name="model">user.shift</field>
        <field name="arch" type="xml">
            <form string="Shift" create="false" edit="false">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"
                                   readonly="state != 'draft'"/>
                            <field name="date" readonly="state != 'draft'"/>/>
                        </group>
                        <group>
                            <field name="route_id"/>
                            <field name="plan_id" readonly="state != 'draft'"/>
                            <field name="vehicle_id" readonly="state != 'draft'"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_user_shift" model="ir.actions.act_window">
        <field name="name">Shifts</field>
        <field name="res_model">user.shift</field>
        <field name="view_mode">tree,form</field>
    </record>

