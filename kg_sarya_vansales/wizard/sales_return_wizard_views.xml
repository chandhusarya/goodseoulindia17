<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_sales_return_wizard" model="ir.ui.view">
		<field name="name">sales.return.wizard</field>
		<field name="model">sales.return.wizard</field>
		<field name="arch" type="xml">
			<form string="Sales Return">
				<group>
					<field name="partner_id" readonly="1"/>
				</group>
				<group>
					<field name="invoice_id" invisible="context.get('return_type', '') != 'invoice'"
					       domain="[('partner_id', '=', partner_id), ('move_type', '=', 'out_invoice'), ('state', '=', 'posted')]"/>
					<field name="picking_id" invisible="context.get('return_type', '') != 'picking'"
					       domain="[('partner_id', '=', partner_id), ('state', '=', 'done')]"/>
				</group>
				<footer>
					<button string='Process' name="action_process" type="object" class="btn-primary" data-hotkey="q"/>
					<button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
				</footer>
			</form>
		</field>
	</record>

</odoo>