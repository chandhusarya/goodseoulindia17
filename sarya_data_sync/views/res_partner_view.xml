<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_partner_action_outlet_customer" model="ir.actions.act_window">
        <field name="name">Outlet Customers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'res_partner_search_mode': 'customer', 'default_is_company': False, 'create': False,
            'default_is_outlet_customer': True}
        </field>
        <field name="domain">[('is_outlet_customer','=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new outlet customer in your address book
            </p>
            <p>
                Odoo helps you easily track all activities related to a outlet customer.
            </p>
        </field>
    </record>

</odoo>
