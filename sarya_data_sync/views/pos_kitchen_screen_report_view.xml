<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--    POS Kitchen Screen Report List view-->

        <record id="pos_kitchen_screen_report_list_view" model="ir.ui.view">
            <field name="name">pos.kitchen.screen.report.list.view</field>
            <field name="model">pos.kitchen.screen.report</field>
            <field name="arch" type="xml">
                <tree string="POS Kitchen Screen Report List">
                    <field name="pos_kitchen_screen_id"/>
                    <field name="pos_config_id"/>
                    <field name="pos_order_id"/>
                    <field name="bill_no"/>
                    <field name="receipt_no"/>
                    <field name="product_tmpl_id"/>
                    <field name="order_received_time"/>
                    <field name="preparation_done_time"/>
                    <field name="preparation_time_duration"/>
                    <field name="is_recall_done"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <!--    POS KItchen Screen Report form view    -->

        <record id="pos_kitchen_screen_report_form_view" model="ir.ui.view">
            <field name="name">pos.kitchen.screen.report.form.view</field>
            <field name="model">pos.kitchen.screen.report</field>
            <field name="arch" type="xml">
                <form string="POS Kitchen Screen Report form">
                    <sheet>
                        <group>
                            <group>
                                <field name="pos_kitchen_screen_id"/>
                                <field name="pos_config_id"/>
                                <field name="pos_order_id"/>
                                <field name="bill_no"/>
                                <field name="receipt_no"/>
                                <field name="pos_order_line_id"/>
                                <field name="product_tmpl_id"/>
                                <field name="order_received_time"/>
                                <field name="preparation_done_time"/>
                                <field name="preparation_time_duration"/>
                                <field name="is_recall_done"/>
                            </group>
                            <group>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--   POS Kitchen Screen Report search view     -->

        <record id="pos_kitchen_screen_report_search_view" model="ir.ui.view">
            <field name="name">pos.kitchen.screen.report.search.view</field>
            <field name="model">pos.kitchen.screen.report</field>
            <field name="arch" type="xml">
                <search string="Search Name">
                    <field name="pos_kitchen_screen_id" string="Kitchen Screen"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Company" name="group_by_company" domain="[]"
                                context="{'group_by': 'company_id'}"/>
                        <filter string="Kitchen Screen" name="group_by_pos_kitchen_screen_id" domain="[]"
                                context="{'group_by': 'pos_kitchen_screen_id'}"/>
                        <filter string="Point of sale" name="group_by_pos_config_id" domain="[]"
                                context="{'group_by': 'pos_config_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--    POS Kitchen Screen Report action     -->

        <record id="main_menu_pos_kitchen_screen_report" model="ir.actions.act_window">
            <field name="name">POS Kitchen Screens Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.kitchen.screen.report</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create':False, 'edit': False, 'delete': False}</field>
            <field name="search_view_id" ref="pos_kitchen_screen_report_search_view"/>
        </record>

    </data>
</odoo>
