<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--    Cash Statement List view-->

        <record id="cash_statement_list_view" model="ir.ui.view">
            <field name="name">cash.statement.list.view</field>
            <field name="model">cash.statement</field>
            <field name="arch" type="xml">
                <tree string="Cash Statement List" delete="False"
                      decoration-danger="state == 'cancel'"
                      decoration-success="state == 'deposit'">
                    <field name="statement_date"/>
                    <field name="name"/>
                    <field name="outlet_code"/>
                    <field name="pos_config_id"/>
                    <field name="outlet_terminal_code"/>
                    <field name="pos_session_id"/>
                    <field name="amount" sum="amount" widget="monetary"/>
                    <field name="balance_cash_amount" sum="amount" widget="monetary"/>
                    <field name="balance_amount" widget="monetary" column_invisible="1"/>
                    <field name="state" decoration-info="state == 'on_hand'" decoration-danger="state == 'cancel'"
                           decoration-success="state == 'deposit'"
                           widget="badge"/>
                    <field name="currency_id" column_invisible="1"/>
                    <field name="company_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <!--    Cash Statement form view    -->

        <record id="cash_statement_form_view" model="ir.ui.view">
            <field name="name">cash.statement.form.view</field>
            <field name="model">cash.statement</field>
            <field name="arch" type="xml">
                <form string="Cash Statement form" delete="False">
                    <header>
                        <button name="action_open_cash_deposit_manager_account_wizard" string="Deposit To Account"
                            type="object"
                            class="oe_highlight" invisible="state != 'on_hand'"/>
                        <button name="action_open_cash_deposit_petty_cash_account_wizard" string="Deposit To Petty Cash Account"
                            type="object"
                            class="oe_highlight" invisible="state != 'on_hand'"/>
                        <field name="state" widget="statusbar" statusbar_visible="on_hand,deposit" nolabel="1"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_journal_entry" class="oe_stat_button" icon="fa-dollar" type="object">
                                <field name="journal_entry_count" widget="statinfo" string="Journal Entry"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="1" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="pos_config_id" readonly="1"/>
                                <field name="pos_session_id" readonly="1"/>
                                <field name="amount" readonly="1"/>
                                <field name="balance_cash_amount" readonly="1"/>
                                <field name="balance_amount" readonly="1" invisible="1"/>
                                <field name="reason" readonly="1"/>
                            </group>
                            <group>
                                <field name="statement_date"/>
                                <field name="company_id" readonly="1"/>
                                <field name="currency_id" invisible="1" readonly="1"/>
                                <field name="outlet_code" readonly="1"/>
                                <field name="outlet_terminal_code" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Bank Transfer Lines" invisible="1">
                                <field name="bank_transfer_line_ids" readonly="1">
                                    <tree delete="False">
                                        <field name="sequence" widget="handle"/>
                                        <field name="bank_transfer_id"/>
                                        <field name="pos_config_id"/>
                                        <field name="pos_session_id"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!--   Cash Statement search view     -->

        <record id="cash_statement_search_view" model="ir.ui.view">
            <field name="name">cash.statement.search.view</field>
            <field name="model">cash.statement</field>
            <field name="arch" type="xml">
                <search string="Search Name">
                    <field name="name" string="Name"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_state" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Company" name="group_by_company" domain="[]"
                                context="{'group_by': 'company_id'}"/>
                        <filter string="Terminal" name="group_by_pos_config_id" domain="[]"
                                context="{'group_by': 'pos_config_id'}"/>
                        <filter string="Session" name="group_by_pos_session_id" domain="[]"
                                context="{'group_by': 'pos_session_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--    Cash Statement action     -->

        <record id="cash_statement_action" model="ir.actions.act_window">
            <field name="name">Cash Statement</field>
            <field name="res_model">cash.statement</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create':False}</field>
            <field name="search_view_id" ref="cash_statement_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create New Cash Statement.
                </p>
            </field>
        </record>

    </data>
</odoo>
