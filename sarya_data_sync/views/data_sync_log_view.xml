<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--    Data Sync Log List view-->

        <record id="data_sync_log_list_view" model="ir.ui.view">
            <field name="name">data.sync.log.list.view</field>
            <field name="model">data.sync.log</field>
            <field name="arch" type="xml">
                <tree string="Data Sync Log List" create="0" edit="0" delete="0">
                    <field name="create_date" string="Date"/>
                    <field name="name"/>
                    <field name="log_type"/>
                    <field name="outlet_code"/>
                    <field name="transfer_type"/>
                    <field name="model_name"/>
                    <field name="message"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!--    Data Sync Log form view    -->

        <record id="data_sync_log_form_view" model="ir.ui.view">
            <field name="name">data.sync.log.form.view</field>
            <field name="model">data.sync.log</field>
            <field name="arch" type="xml">
                <form string="Data Sync Log form" create="0" edit="0" delete="0">
                    <sheet>
                        <h1>
                            <field name="name" placeholder="Name of Data Sync" required="1" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="log_type" readonly="1"/>
                                <field name="outlet_code" readonly="1"/>
                                <field name="transfer_type" readonly="1"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="model_name" readonly="1"/>
                            <field name="message" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--   Data Sync Log search view     -->

        <record id="data_sync_log_search_view" model="ir.ui.view">
            <field name="name">data.sync.log.search.view</field>
            <field name="model">data.sync.log</field>
            <field name="arch" type="xml">
                <search string="Search Name">
                    <field name="name" string="Name"/>
                </search>
            </field>
        </record>

        <!--    Data Sync Log action     -->

        <record id="data_sync_log_action" model="ir.actions.act_window">
            <field name="name">Data Sync Log</field>
            <field name="res_model">data.sync.log</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="data_sync_log_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create New Data Sync Log Record.
                </p>
            </field>
        </record>

    </data>
</odoo>
