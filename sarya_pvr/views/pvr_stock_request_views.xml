<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action for Stock Request -->
    <record id="action_pvr_stock_request" model="ir.actions.act_window">
        <field name="name">PVR Stock Requests</field>
        <field name="res_model">pvr.stock.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first PVR Stock Request.
            </p><p>
            Manage product requests for your PVR locations here.
        </p>
        </field>
    </record>

    <!-- Tree View for Stock Request -->
    <record id="view_pvr_stock_request_tree" model="ir.ui.view">
        <field name="name">pvr.stock.request.tree</field>
        <field name="model">pvr.stock.request</field>
        <field name="arch" type="xml">
            <tree string="PVR Stock Requests" decoration-bf="state == 'draft'" decoration-warning="state == 'requested'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="pvr_location_id"/>
                <field name="request_date" string="Expected Delivery Date"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'requested'" decoration-muted="state == 'cancel'"/>
                <field name="total_requested_qty"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Stock Request -->
    <record id="view_pvr_stock_request_form" model="ir.ui.view">
        <field name="name">pvr.stock.request.form</field>
        <field name="model">pvr.stock.request</field>
        <field name="arch" type="xml">
            <form string="PVR Stock Request">
                <header>
                    <button string="Request" type="object" name="action_request" class="oe_highlight" invisible="state != 'draft'"/>
                    <button string="Approve" groups="sarya_pvr.can_approve_pvr_stock_req" type="object" name="action_approve" class="oe_highlight" invisible="state != 'manager_approval'"/>
                    <button string="Recheck GRN" groups="sarya_pvr.can_approve_pvr_stock_req" type="object" name="action_recheck_grn" class="oe_highlight" invisible="state != 'exception'"/>

                    <button string="Cancel" type="object" name="action_cancel" class="oe_highlight" invisible="state not in ('draft', 'manager_approval')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_purchase_orders"
                                type="object" invisible="not purchase_order_count"
                                string="Purchase Orders"
                                class="oe_stat_button"
                                icon="fa-shopping-cart">
                            <field name="purchase_order_count" widget="statinfo"/>
                        </button>
                        <button name="action_view_pickings" type="object" class="oe_stat_button" icon="fa-truck" string="Pickings" invisible="not picking_ids">
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="pvr_location_id" domain="[('usage', '=', 'internal')]" options="{'no_create': True, 'no_create_edit': True}" readonly="1"/>
                            <field name="pvr_master" options="{'no_create': True, 'no_create_edit': True}" invisible="1"/>
                            <field name="source_location" options="{'no_create': True, 'no_create_edit': True}" groups="sarya_pvr.can_approve_pvr_stock_req,sarya_pvr.can_transfer_pvr_stock_req"/>
                        </group>
                        <group>
                            <field name="request_date" string="Expected Delivery Date"/>
                            <field name="company_id" readonly="1"/>
                            <field name="picking_ids" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Requested Items" name="requested_items">
                            <field name="request_line_ids" context="{'default_pvr_master': pvr_master}" mode="kanban" >
                                <kanban>
                                    <field name="id"/>
                                    <field name="product_id"/>
                                    <field name="qty_available_at_pvr"/>
                                    <field name="requested_qty"/>
                                    <field name="transferred_qty"/>
                                    <field name="notes"/>
                                    <field name="product_uom_id"/>
                                    <field name="packaging_id"/>
                                    <field name="allowed_product_ids"/>

                                    <templates>
                                        <t t-name="kanban-box">
                                            <t t-set="color" t-value="kanban_color(record.id.raw_value)"/>
                                            <div t-att-class="color + ' oe_kanban_global_click'">
                                                <div class="oe_kanban_details">
                                                    <!-- Product -->
                                                    <strong><field name="product_id"/></strong>

                                                    <!-- Available -->
                                                    <div>
                                                        <b>Available: </b>
                                                        <t t-esc="record.qty_available_at_pvr.value"/>
                                                    </div>

                                                    <!-- Requested -->
                                                    <div>
                                                        <b>Requested: </b>
                                                        <t t-esc="record.requested_qty.value"/>
                                                    </div>

                                                    <!-- Transferred -->
                                                    <div>
                                                        <b>Transferred: </b>
                                                        <t t-esc="record.transferred_qty.value"/>
                                                    </div>

                                                    <!-- Notes -->
                                                    <div t-if="record.notes.raw_value">
                                                        <i><field name="notes"/></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form string="PVR Stock Request Line">
                                    <group>
                                        <field name="request_id" invisible="1"/>

                                        <group>
                                            <field name="is_transfered" invisible="1"/>
                                            <field name="product_id" readonly="is_transfered == True" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                            <field name="packaging_id" readonly="is_transfered == True" options="{'no_create_edit': True, 'no_create': True}"/>
                                            <field name="requested_qty" readonly="is_transfered == True"/>
                                            <field name="qty_available_at_pvr" force_save="1" readonly="1"/>
                                            <field name="primary_packaging_id" force_save="1" readonly="1" invisible="1"/>
                                            <field name="requested_qty_primary" readonly="1" force_save="1" invisible="1"/>
                                            <field name="daily_avg_last_7_days" force_save="1" readonly="1"/>
                                            <field name="coverage_days" force_save="1" readonly="1"/>

                                        </group>
                                        <group>
                                            <field name="product_uom_id" invisible="1"/>
                                            <field name="transferred_qty" readonly="1" force_save="1"/>

                                            <field name="pvr_location_id" readonly="is_transfered == True"  invisible="0" options="{'no_create_edit': True, 'no_create': True}"/>
                                            <field name="source_location_id" readonly="is_transfered == True"  invisible="0" options="{'no_create_edit': True, 'no_create': True}"/>
                                            <field name="lpo_vendor_id" force_save="1"/>
                                            <field name="lpo_qty" force_save="1"/>


                                        </group>
                                    </group>
                                    <notebook groups="sarya_pvr.can_approve_pvr_stock_req,sarya_pvr.can_transfer_pvr_stock_req">
                                        <page string="Details">
                                            <field name="detail_ids" readonly="is_transfered == True" context="{'default_product_id':product_id, 'default_source_location_id':source_location_id}">
                                                <tree editable="top">
                                                    <field name="product_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" required="1" column_invisible="1"/>
                                                    <field name="pvr_location_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" column_invisible="1"/>
                                                    <field name="source_location_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" column_invisible="1" />
                                                    <field name="quant_id" options="{'no_create_edit': True, 'no_create': True}"
                                                           domain="[('product_id', '=', product_id), '|', ('location_id', 'in', [source_location_id]), ('location_id', 'child_of', source_location_id)]"/>
                                                    <field name="lot_id" readonly="1" force_save="1"/>
                                                    <field name="available_stock" readonly="1" force_save="1"/>
                                                    <field name="quantity"/>
                                                    <field name="product_uom_id" options="{'no_create_edit': True, 'no_create': True}" required="1" column_invisible="1"/>
                                                </tree>
                                            </field>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_pvr_stock_request_line_form" model="ir.ui.view">
        <field name="name">pvr.stock.request.line.form</field>
        <field name="model">pvr.stock.request.line</field>
        <field name="arch" type="xml">
            <form string="PVR Stock Request Line">
                <group>
                    <field name="request_id" invisible="1"/>

                    <group>
                        <field name="is_transfered" invisible="1"/>
                        <field name="product_id" readonly="is_transfered == True" options="{'no_create_edit': True, 'no_create': True}"/>
                        <field name="packaging_id" readonly="is_transfered == True" options="{'no_create_edit': True, 'no_create': True}"/>
                        <field name="requested_qty" readonly="is_transfered == True"/>
                        <field name="qty_available_at_pvr" force_save="1" readonly="1"/>
                        <field name="primary_packaging_id" force_save="1" readonly="1"/>
                        <field name="requested_qty_primary" readonly="1" force_save="1"/>

                    </group>
                    <group>
                        <field name="product_uom_id" invisible="1"/>
                        <field name="transferred_qty" readonly="1" force_save="1"/>

                        <field name="pvr_location_id" readonly="is_transfered == True"  invisible="0" options="{'no_create_edit': True, 'no_create': True}"/>
                        <field name="source_location_id" readonly="is_transfered == True"  invisible="0" options="{'no_create_edit': True, 'no_create': True}"/>


                    </group>
                </group>
                <notebook groups="sarya_pvr.can_approve_pvr_stock_req,sarya_pvr.can_transfer_pvr_stock_req">
                    <page string="Details">
                        <field name="detail_ids" readonly="is_transfered == True" context="{'default_product_id':product_id, 'default_source_location_id':source_location_id}">
                            <tree editable="top">
                                <field name="product_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" required="1" column_invisible="1"/>
                                <field name="pvr_location_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" column_invisible="1"/>
                                <field name="source_location_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" column_invisible="1" />
                                <field name="quant_id" options="{'no_create_edit': True, 'no_create': True}"
                                       domain="[('product_id', '=', product_id), '|', ('location_id', 'in', [source_location_id]), ('location_id', 'child_of', source_location_id)]" force_save="1"/>
                                <field name="lot_id" readonly="1" force_save="1"/>
                                <field name="available_stock" readonly="1" force_save="1"/>
                                <field name="quantity"/>
                                <field name="product_uom_id" options="{'no_create_edit': True, 'no_create': True}" required="1" column_invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>


    <record id="view_pvr_stock_request_form_portal" model="ir.ui.view">
        <field name="name">pvr.stock.request.form</field>
        <field name="model">pvr.stock.request</field>
        <field name="arch" type="xml">
            <form string="PVR Stock Request">
                <header>
                    <a href="/my/home" class="btn btn-secondary">
                        <span class="fa fa-home"/> Home
                    </a>
                    <button string="Request" type="object" name="action_request" class="oe_highlight" invisible="state != 'draft'"/>

                    <button string="Accept" type="object" name="action_accept" class="oe_highlight" invisible="state != 'pending'"/>

                    <button string="Cancel" type="object" name="action_cancel" class="oe_highlight" invisible="state not in ('draft', 'manager_approval')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_pickings" type="object" class="oe_stat_button" icon="fa-truck" string="Pickings" invisible="not picking_ids">
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="pvr_location_id" domain="[('usage', '=', 'internal')]" options="{'no_create': True}" readonly="1"/>
                            <field name="pvr_master" options="{'no_create': True, 'no_create_edit': True}" invisible="1"/>
                            <field name="source_location" options="{'no_create': True, 'no_create_edit': True}" groups="sarya_pvr.can_approve_pvr_stock_req,sarya_pvr.can_transfer_pvr_stock_req"/>
                        </group>
                        <group>
                            <field name="request_date" string="Expected Delivery Date"/>
                            <field name="company_id" readonly="1"/>
                            <field name="picking_ids" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Requested Items" name="requested_items">
                            <field name="request_line_ids" context="{'default_pvr_master': pvr_master}" mode="kanban" >
                                <kanban create="False">
                                    <field name="id"/>
                                    <field name="product_id"/>
                                    <field name="qty_available_at_pvr"/>
                                    <field name="requested_qty"/>
                                    <field name="transferred_qty"/>
                                    <field name="notes"/>
                                    <field name="product_uom_id"/>
                                    <field name="packaging_id"/>
                                    <field name="allowed_product_ids"/>

                                    <templates>
                                        <t t-name="kanban-box">
                                            <t t-set="color" t-value="kanban_color(record.id.raw_value)"/>
                                            <div t-att-class="color + ' oe_kanban_global_click'">
                                                <div class="oe_kanban_details">
                                                    <!-- Product -->
                                                    <strong><field name="product_id"/></strong>

                                                    <!-- Available -->
                                                    <div>
                                                        <b>Available: </b>
                                                        <t t-esc="record.qty_available_at_pvr.value"/>
                                                    </div>

                                                    <!-- Requested -->
                                                    <div>
                                                        <b>Requested: </b>
                                                        <t t-esc="record.requested_qty.value"/>
                                                    </div>

                                                    <!-- Transferred -->
                                                    <div>
                                                        <b>Transferred: </b>
                                                        <t t-esc="record.transferred_qty.value"/>
                                                    </div>

                                                    <!-- Notes -->
                                                    <div t-if="record.notes.raw_value">
                                                        <i><field name="notes"/></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form string="PVR Stock Request Line">
                                    <group>
                                        <field name="request_id" invisible="1"/>

                                        <group>
                                            <field name="is_transfered" invisible="1"/>
                                            <field name="product_id" readonly="1" options="{'no_create_edit': True, 'no_create': True, 'no_open': True, 'no_edit': True}"/>
                                            <field name="packaging_id" readonly="1" options="{'no_create_edit': True, 'no_create': True}"/>
                                            <field name="requested_qty" readonly="state in ('pending', 'completed')"/>
                                            <field name="qty_available_at_pvr" force_save="1" readonly="1"/>
                                            <field name="daily_avg_last_7_days" force_save="1" readonly="1"/>
                                            <field name="coverage_days" force_save="1" readonly="1"/>

                                        </group>
                                        <group>
                                            <field name="product_uom_id" invisible="1"/>
                                            <field name="transferred_qty" readonly="1" force_save="1"/>
                                            <field name="state" readonly="1" force_save="1" invisible="1"/>

                                            <field name="source_location_id" readonly="is_transfered == True"  invisible="1" options="{'no_create_edit': True, 'no_create': True}"/>
                                            <field name="lpo_vendor_id" readonly="1" force_save="1" invisible="1"/>
                                            <field name="lpo_qty" readonly="1" force_save="1" invisible="1"/>


                                        </group>
                                    </group>
                                    <notebook invisible="state != 'pending'">
                                        <page string="Details">
                                            <field name="detail_ids" context="{'default_product_id':product_id, 'default_source_location_id':source_location_id}">
                                                <tree editable="top" create="False">
                                                    <field name="product_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" required="1" column_invisible="1" readonly="1" />
                                                    <field name="pvr_location_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" column_invisible="1" readonly="1" />
                                                    <field name="source_location_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" column_invisible="1" readonly="1" />
                                                    <field name="quant_id" options="{'no_create_edit': True, 'no_create': True}"
                                                           domain="[('product_id', '=', product_id), '|', ('location_id', 'in', [source_location_id]), ('location_id', 'child_of', source_location_id)]"
                                                           readonly="1" />
                                                    <field name="lot_id" readonly="1" force_save="1" />
                                                    <field name="available_stock" column_invisible="1" readonly="1" force_save="1"/>
                                                    <field name="quantity"/>
                                                    <field name="product_uom_id" options="{'no_create_edit': True, 'no_create': True}" required="1" column_invisible="1"/>
                                                </tree>
                                            </field>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pvr_stock_request_portal" model="ir.actions.act_window">
        <field name="name">PVR Stock Requests Portal</field>
        <field name="res_model">pvr.stock.request</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_pvr_stock_request_form_portal"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first PVR Stock Request.
            </p><p>
            Manage product requests for your PVR locations here.
        </p>
        </field>
    </record>




    <!-- Top Level Menu -->
    <menuitem id="menu_pvr_root"
              name="PVR" groups="sarya_pvr.group_pvr_admin"
              sequence="100"/>

    <!-- Stock Request Menu -->
    <menuitem id="menu_pvr_stock_request"
              name="Stock Request"
              parent="menu_pvr_root"
              action="action_pvr_stock_request"
              sequence="10"/>

    <menuitem id="menu_pvr_stock_request_model"
              name="Stock Request"
              parent="menu_pvr_stock_request"
              action="action_pvr_stock_request"
              sequence="10"/>

</odoo>
