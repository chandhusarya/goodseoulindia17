                                                    <!-- Requested -->
                                                    <div>
                                                        <b>Requested: </b>
                                                        <t t-esc="record.requested_qty.value"/>
                                                    </div>

                                                    <!--                                                     Received-->
                                                    <div>
                                                        <b>Received: </b>
                                                        <t t-esc="record.received_qty.value"/>
                                                    </div>

                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form string="Container Request Line">
                                    <group>
                                        <group>
                                            <field name="product_id" readonly="1" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                            <field name="requested_qty" readonly="state == 'pending'"/>
                                            <field name="received_qty" invisible="state != 'pending'"/>

                                        </group>

                                        <field name="request_id" invisible="1"/>
                                        <field name="state" invisible="1"/>
                                        <group>


                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <menuitem id="menu_container_request"
              name="Container Request"
              parent="sarya_pvr.menu_pvr_root"
              action="action_container_request"
              sequence="15"/>


</odoo>