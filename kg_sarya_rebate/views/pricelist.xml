            <xpath expr="//field[@name='payment_state']" position='after'>
               <field name="delivery_status_actual"  optional="show"
                      invisible="move_type != 'out_invoice'"/>
                <field name="pod_status" invisible="move_type != 'out_invoice'"/>
            </xpath>
         </field>
    </record> -->

    <record id="view_out_invoice_tree_inherit_kg_sarya_rebate_pod" model="ir.ui.view">
      <field name="name">account.move.tree.inherit.cha.sarya.account</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree" />
        <field name="arch" type="xml">
             <xpath expr="//field[@name='payment_state']" position='after'>
               <field name="delivery_status_actual"  optional="show"
                      invisible="move_type != 'out_invoice'"/>
                <field name="pod_status" invisible="move_type != 'out_invoice'"/>
            </xpath>
        </field>
    </record>

</data>
</odoo>