<odoo>
  <data>

	<!-- including rebate in pricelist-->
    <record id="view_price_list_rebate_inherit" model="ir.ui.view">
        <field name="name">product.pricelist.inherit</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="kg_sarya.view_price_list_advance_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position='after'>
                <field name="rebate_ids" widget="many2many_tags" required="0" options="{'no_create': True}"/>
            </xpath>
         </field>
    </record>


    <!-- including account move-->
    <record id="view_acc_move_inherit" model="ir.ui.view">
        <field name="name">account.move.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position='after'>
                <field name="delivery_date"
                       readonly="state != 'draft'"/>
                <field name="actual_delivery_date"/>
                <field name="delivery_status_actual"
                       readonly="1"
                       force_save="1"
                       invisible="move_type != 'out_invoice'"/>
                <field name="pod_status"/>
                <field name="pod_attach_ids" widget="many2many_binary"/>
                <field name="pod_attached_date" force_save="1" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='payment_reference']" position='after'>
                <field name="driver" readonly="state != 'draft'" invisible="1"/>
                <field name="carrier_id" readonly="state != 'draft'" invisible="1"/>
                <field name="sale_order_id" readonly="1" groups="base.group_no_one"/>
                <field name="sale_order_customer_id" readonly="1" groups="base.group_no_one"/>
            </xpath>
         </field>
    </record>

