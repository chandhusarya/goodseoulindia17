<odoo>
	<data>

		<record id="rebate_move_wizard_form_view" model="ir.ui.view">
			<field name="name">rebate.move.form.view</field>
			<field name="model">rebate.move.wizard</field>
			<field name="arch" type="xml">
				<form string="Rebate Journal Entries">
					<group>
						<group>
							<field name="from_date"/>
							<field name="to_date"/>
							<field name="move_date"/>
						</group>
						<group>
							<field name="partner_id" options="{'no_create': True, 'no_create_edit':True}"/>
						</group>
					</group>
					<group>
						<field name="rebate_ids" widget="many2many_tags" string="Rebates"
						       options="{'no_create': True, 'no_create_edit':True}"/>
					</group>
					<group invisible="rebate_ids != []">
						<div class="alert alert-info" role="alert">
							<i class="fa fa-info-circle mr-1"/>
							If you leave Rebates field empty, all matched rebates will be selected.
						</div>
					</group>
					<footer>
						<button name="create_move" string="Generate Entries" type="object" class="btn-primary"
						        data-hotkey="q"/>
						<button special="cancel" data-hotkey="z" string="Cancel" class="btn-secondary"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="action_rebate_move_wizard" model="ir.actions.act_window">
			<field name="name">Rebate Journal Entries</field>
			<field name="res_model">rebate.move.wizard</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Generate Rebate Journal Entries" id="rebate_generate_move_menu"
		          action="action_rebate_move_wizard"
		          sequence="10" parent="kg_sarya_rebate.rebate_entry_menu_main"/>


	</data>
</odoo>