<odoo>
  <data>

    <record id="rebate_report_wizard" model="ir.ui.view">
        <field name="name">pricelist.wizard.form</field>
        <field name="model">pricelist.wizard</field>
        <field name="arch" type="xml">
            <form string="Price List Form" >
                <sheet>
                    <group name="quick main">
                        <group name="quick_child">
                            <field name="product_type" column_invisible="True"/>
                            <field name="brand_id"
                                   invisible="product_type == 'all_product'"
                                   widget="many2many_tags"
                                   options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="price_list" options="{'no_create': True, 'no_create_edit':True}" />
                        </group>
                        <group>
                            <field name="customer_section_id"
                                   invisible="product_type == 'all_product'"
                                   readonly="1"/>
                            <field name="pricelist_name"
                                   invisible="price_list"
                                   required="not price_list"/>
                        </group>
                    </group>
                    <p align="center"><button name="create_price_list" string="Create Price list" type="object" class='oe_highlight'/></p>
                    <field name="product_ids">
                        <tree editable="bottom" create="false">
                            <field name="product_id" readonly="1" force_save="1"/>
                            <field name="product_product_id" column_invisible="True"/>
                            <field name="packging_id"
                                   options="{'no_create': True, 'no_create_edit':True}"
                                   required="1"
                                   domain="[('product_id','in',product_product_id),('sales','=',True)]"
                                   string="Packaging"/>
                            <field name="price"/>
                        </tree>
                    </field>
                </sheet>
                <footer></footer>
            </form>

        </field>
    </record>

    <record id="pricelist_wizard_action" model="ir.actions.act_window">
        <field name="name">Price List Form</field>
        <field name="res_model">pricelist.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


  </data>
</odoo>