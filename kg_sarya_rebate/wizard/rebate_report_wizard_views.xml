<odoo>
	<data>

		<record id="rebate_report_wizard_form_view" model="ir.ui.view">
			<field name="name">rebate.report.form.view</field>
			<field name="model">rebate.report.wizard</field>
			<field name="arch" type="xml">
				<form string="Rebate Report">
					<group>
						<group>
							<field name="partner_id" options="{'no_create': True, 'no_create_edit':True}"/>
							<field name="report_type"/>
						</group>
						<group>
							<field name="date_start" column_invisible="True"/>
							<field name="date_end" string="Until Specific Date"/>
							<field name="include_reserve"/>
						</group>
					</group>
					<group>
						<field name="rebate_ids" widget="many2many_tags" string="Rebates"
						       options="{'no_create': True, 'no_create_edit':True}"/>
					</group>
					<group invisible="rebate_ids != []">
						<div class="alert alert-info" role="alert">
							<i class="fa fa-info-circle mr-1"/>
							If you leave Rebates field empty, all matched rebates will be selected.
						</div>
					</group>
					<footer>
						<button name="generate_report" string="Print" type="object" class="btn-primary"
						        data-hotkey="q"/>
						<button special="cancel" data-hotkey="z" string="Cancel" class="btn-secondary"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="action_rebate_report_wizard" model="ir.actions.act_window">
			<field name="name">Rebate Report</field>
			<field name="res_model">rebate.report.wizard</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem name="Rebate Reports" id="customer_rebate_report_menu_main" sequence="900"
		          parent="kg_sarya_rebate.rebate_menu_main"/>
		<menuitem name="Customer Rebate" id="customer_rebate_report_menu"
		          action="kg_sarya_rebate.action_rebate_report_wizard"
		          sequence="1000"
		          parent="customer_rebate_report_menu_main"/>


	</data>
</odoo>