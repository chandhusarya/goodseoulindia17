<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_rbt_modification" model="ir.ui.view">
        <field name="name">res.config.settings.invoice.modification</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='purchase']" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" title="Choose the partner to send email.">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Partner for WMS Notifications</span>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Partner" for="wms_partner_id"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="wms_partner_id" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>