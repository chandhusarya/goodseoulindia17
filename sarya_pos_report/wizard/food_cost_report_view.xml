<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="food_cost_report_form_view" model="ir.ui.view">
            <field name="name">sarya_pos_report.food.cost.report.form</field>
            <field name="model">food.cost.report</field>
            <field name="arch" type="xml">
                <form string="Food Cost Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="from_date"/>
                            </group>
                            <group>
                                <field name="to_date"/>
                            </group>
                        </group><hr/>
                        <div>
                            <h5><field name="outlet_ids" widget="many2many_tags" placeholder="Outlet"/></h5>
                        </div>
                    </sheet>
                    <footer>
                        <button type="object" name="generate_report" string="Generate Report"/>
                        <button special="cancel" data-hotkey="z" string="Close"/>
                    </footer>
                </form>
            </field>
        </record>



        <record id="food_cost_report_act_window" model="ir.actions.act_window">
            <field name="name">Food Cost Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">food.cost.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Food Cost Report" id="food_cost_report_menu" parent="point_of_sale.menu_point_rep" action="food_cost_report_act_window"/>

    </data>
</odoo>