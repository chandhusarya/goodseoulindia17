<!--<?xml version="1.0" encoding="utf-8"?>-->
<odoo>

    <record id="fright_charge_estimation_tree" model="ir.ui.view">
        <field name="name">fright.charge.estimation.tree</field>
        <field name="model">fright.charge.estimation</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="vendor_id" required="1" domain="[('is_clearing_agent', '=', True)]"/>
                <field name="from_port" required="1" />
                <field name="to_port" required="1"/>
                <field name="container_cost" invisible="1"/>
                <field name="fright_charge"/>
                <field name="price_variance_allowed"/>
            </tree>
        </field>
    </record>

    <record id="fright_charge_estimation_form" model="ir.ui.view">
        <field name="name">fright.charge.estimation.form</field>
        <field name="model">fright.charge.estimation</field>
        <field name="arch" type="xml">
            <form string="Estimation">
                <sheet>
                    <group name="category_form main">
                        <group name="category_form_child">
                            <field name="vendor_id" required="1" domain="[('is_clearing_agent', '=', True)]"/>
                             <field name="from_port" required="1"/>
                             <field name="to_port" required="1"/>
                        </group>
                        <group>
                            <field name="fright_charge"/>
                            <field name="container_cost" invisible="1"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <record id="fright_charge_estimation_action" model="ir.actions.act_window">
        <field name="name">Fright Charge Estimation</field>
        <field name="res_model">fright.charge.estimation</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem name="Fright Charge Estimation"
              id="fright_charge_estimation_action_menu"
              action="fright_charge_estimation_action"
              sequence="2"
              parent="account.account_management_menu"/>

</odoo>

