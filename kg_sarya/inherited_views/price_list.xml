    <!-- including fields for cbm calaculation and product Packing selection -->
    <record id="view_price_list_item_inherit" model="ir.ui.view">
        <field name="name">product.template.cbm</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']/group" position='inside'>
                <group name="cbm calaculation" string="CBM Calaculation">
                    <field name="width" />
                    <field name="height" />
                    <field name="lenght" string="Length"/>
                    <field name="cbm" string="CBM" />
                </group>
            </xpath>
            
         </field>
    </record>


    <!-- field for gross weight -->
    <record id="view_gross_weight_inherit" model="ir.ui.view">
        <field name="name">product.template.gross_weight</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='inventory']/group/group[@name='group_lots_and_weight']" position='replace'>

                <group name="group_lots_and_weight" string="Logistics">
                    <label for="weight"/>
                    <div class="o_row" name="weight">
                        <field name="weight"/>
                        <span><field name="weight_uom_name"/></span>
                    </div>
                    <label for="gross_weight"/>
                    <div class="o_row" name="gross_weight">
                        <field name="gross_weight"/>
                        <span><field name="weight_uom_name"/></span>
                    </div>
                    <!-- <field name="gross_weight" string="Gross weight" placeholder="Kg"/> -->
                    <label for="volume"/>
                    <div class="o_row" name="volume">
                        <field name="volume" string="Volume"/>
                        <span><field name="volume_uom_name"/></span>
                    </div>
                </group>
                    
            </xpath>
            
         </field>
    </record>

