        <record id="employee_rule_see_self" model="ir.rule">
            <field name="name">Employee - See Only Themselves</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="groups" eval="[(6, 0, [ref('base.group_user')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
        </record>

        <record id="employee_rule_manager_see_own_and_subordinates" model="ir.rule">
            <field name="name">Manager - See Own and Its Employees</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="groups" eval="[(6, 0, [ref('hr.group_hr_user')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="domain_force">
                [
                '|',
                ('user_id', '=', user.id),
                ('parent_id.user_id', '=', user.id)
                ]
            </field>
        </record>

        <record id="employee_rule_hr_admin_see_all" model="ir.rule">
            <field name="name">HR Admin - See All Employees</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="groups" eval="[(6, 0, [ref('hr.group_hr_manager')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="group_hr_employee_portal" model="res.groups">
            <field name="name">Employee Portal Access</field>
        </record>


