<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_grade_form_view" model="ir.ui.view">
            <field name="name">hr.grade.form</field>
            <field name="model">hr.grade</field>
            <field name="arch" type="xml">
                <form string="Grade">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_grade_tree_view" model="ir.ui.view">
            <field name="name">hr.grade.tree</field>
            <field name="model">hr.grade</field>
            <field name="arch" type="xml">
                <tree string="Grade">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="hr_grade_search_view" model="ir.ui.view">
            <field name="name">hr.grade.search</field>
            <field name="model">hr.grade</field>
            <field name="arch" type="xml">
                <search string="Grade">
                    <group expand="1" string="Group By">
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_grade_act_window" model="ir.actions.act_window">
            <field name="name">Grade</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.grade</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Grade.
                </p>
            </field>
        </record>

        <menuitem name="Grade" id="hr_grade_menu" sequence="3" parent="hr.menu_config_recruitment" action="hr_grade_act_window"/>

    </data>
</odoo>