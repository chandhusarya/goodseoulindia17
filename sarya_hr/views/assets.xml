<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="asset_master_form_view" model="ir.ui.view">
            <field name="name">asset_master.form.view</field>
            <field name="model">asset.master</field>
            <field name="arch" type="xml">
                <form string="Asset">
<!--                    <header>-->
<!--                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>-->
<!--                    </header>-->
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" icon="fa-bars" type="object" name="open_history">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">
                                        Allocation
                                    </span>
                                    <span class="o_stat_text">
                                        History
                                    </span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Asset" required="1"
                                />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code" readonly="1"/>
<!--                                <field name="asset_account_id" options="{'no_open':True, 'no_create':True}"-->
<!--                                       attrs="{'readonly': [('state', '!=', 'draft')]}"  invisible="1"/>-->
                                <field name="is_allocated"/>
                                <field name="is_active" widget="boolean_toggle"/>
                            </group>
                            <group>
<!--                                <field name="active" invisible="1"/>-->
                                <field name="company_id"/>
                                <field name="serial_number"/>
                                <field name="account_asset_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="is_consume" invisible="1"/>
                                <field name="asset_category_id"/>
                                <field name="is_vehicle"/>
                            </group>
                            <group string="Vehicle" invisible="is_vehicle == False">
<!--                                <field name="brand_id"/>-->
<!--                                <field name="model_id"/>-->
<!--                                <field name="chasis_no"/>-->
<!--                                <field name="engine_no"/>-->
                                <field name="analytic_account_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="asset_master_tree_view" model="ir.ui.view">
            <field name="name">asset_master.tree.view</field>
            <field name="model">asset.master</field>
            <field name="arch" type="xml">
                <tree string="Assets" decoration-muted="is_active == False">
                    <field name="is_active" invisible="1"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="is_allocated"/>
                </tree>
            </field>
        </record>

        <record id="asset_master_search_view" model="ir.ui.view">
            <field name="name">asset_master.search_view</field>
            <field name="model">asset.master</field>
            <field name="arch" type="xml">
                <search string="Assets">
                        <field name="name" string="Asset" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                        <field name="code"/>
                        <filter string="Allocated" name="is_allocated"
                                domain="[('is_allocated','=',True)]"/>
                        <filter string="Free" name="not_allocated"
                                domain="[('is_allocated','=',False)]"/>
                        <field name="asset_category_id"/>
                        <group expand="0" string="Group By">
                            <filter string="Categories" name="asset_category_id"
                                context="{'group_by':'asset_category_id'}"/>
                        </group>

                </search>
            </field>
        </record>

        <record id="asset_master_action" model="ir.actions.act_window">
            <field name="name">Assets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.master</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Asset.
                </p>
            </field>
        </record>

    </data>
</odoo>