<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="hr_leave_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.leave.form</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="string">Remark</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="manager_remark" readonly="state not in ('draft', 'confirm', 'validate1')" widget="text" placeholder="Manager Remark..."/>
                </xpath>
                <xpath expr="//button[@name='action_validate']" position="attributes">
                    <attribute name="groups">hr_holidays.group_hr_holidays_manager</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>