<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="asset_category_action" model="ir.actions.act_window">
        <field name="name">Asset Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asset.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="asset_category_tree_view" model="ir.ui.view">
        <field name="name">asset_category.tree.view</field>
        <field name="model">asset.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="asset_category_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="asset_category_view_form" model="ir.ui.view">
        <field name="name">asset_category_form_view</field>
        <field name="model">asset.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="asset_category_id"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="is_vehicle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>