<odoo>
<!--    <menuitem id="menu_hr_tax_config_root" name="Tax Slab Configuration" parent="hr.menu_config_employee"/>-->

    <record id="view_hr_tax_config_form" model="ir.ui.view">
        <field name="name">hr.tax.config.form</field>
        <field name="model">hr.tax.config</field>
        <field name="arch" type="xml">
            <form string="Tax Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="financial_year"/>
                            <field name="tax_rebate"/>
                        </group>
                        <group>
                            <field name="tax_regime"/>
                            <field name="standard_deduction"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tax Slabs">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="lower_limit"/>
                                    <field name="upper_limit"/>
                                    <field name="rate"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_tax_config_tree" model="ir.ui.view">
        <field name="name">hr.tax.config.tree</field>
        <field name="model">hr.tax.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name"/>
                <field name="tax_regime"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_tax_config" model="ir.actions.act_window">
        <field name="name">Tax Slab Configurations</field>
        <field name="res_model">hr.tax.config</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hr_tax_config" name="Manage Tax Slabs" parent="hr.menu_config_employee" groups="base.group_system,hr.group_hr_manager"
              action="action_hr_tax_config"/>
</odoo>
