<odoo>
    <template id="portal_my_home_employee" name="Request Employee" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-set="portal_client_category_enable" t-value="True"/>
<!--            <t t-set="portal_vendor_category_enable" t-value="True"/>-->
        </xpath>
        <div id="portal_client_category" position="inside">
            <t groups="sarya_hr.group_hr_employee_portal">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="icon" t-value="'/sarya_hr/static/src/clock.png'"/>
                    <t t-set="title">Leave Request</t>
                    <t t-set="url" t-value="'/my/leave/request'"/>
                    <t t-set="text">Apply for Leaves</t>
                    <!--                <t t-set="placeholder_count" t-value="'invoice_count'"/>-->
                    <t t-set="config_card" t-value="True"/>
                </t>
            </t>
        </div>
        <div id="portal_client_category" position="inside">
            <t groups="sarya_hr.group_hr_employee_portal">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="icon" t-value="'/sarya_hr/static/src/clock.png'"/>
                    <t t-set="title">Leave History</t>
                    <t t-set="url" t-value="'/my/leaves/history'"/>
                    <t t-set="text">Leaves Taken</t>
                    <!--                <t t-set="placeholder_count" t-value="'invoice_count'"/>-->
                    <t t-set="config_card" t-value="True"/>
                </t>
            </t>
        </div>
<!--        <div id="portal_vendor_category" position="inside">-->
<!--            <t t-call="portal.portal_docs_entry">-->
<!--                <t t-set="icon" t-value="'/account/static/src/img/Bill.svg'"/>-->
<!--                <t t-set="title">Our Invoices</t>-->
<!--                <t t-set="url" t-value="'/my/invoices?filterby=bills'"/>-->
<!--                <t t-set="text">Follow, download or pay our invoices</t>-->
<!--                <t t-set="placeholder_count" t-value="'bill_count'"/>-->
<!--            </t>-->
<!--        </div>-->
    </template>
</odoo>
