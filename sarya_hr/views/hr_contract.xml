                </xpath>
                <xpath expr="//header" position="inside">
                    <field name="is_contract_updated" invisible="1"/>
                    <button name="action_open_survey"
                            type="object"
                            string="Open Declaration Form"
                            class="oe_highlight"/>
                    <button name="action_terminate_contract"
                            type="object"
                            string="Terminate Contract"
                            groups="hr_contract.group_hr_contract_manager"
                            class="btn-danger"
                            invisible="is_contract_updated"
                            icon="fa-times"/>
                    <button name="action_renew_contract"
                            type="object"
                            string="Renew Contract"
                            groups="hr_contract.group_hr_contract_manager"
                            class="btn-primary"
                            invisible="is_contract_updated"
