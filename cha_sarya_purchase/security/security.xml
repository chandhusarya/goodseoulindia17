    <!--    Multi Company Rule-->
    <record id="office_purchase_multi_company_rule" model="ir.rule">
        <field name="name">Office Purchase Multi Company</field>
        <field name="model_id" ref="model_office_purchase"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force">[
            '|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record id="local_purchase_mrp_multi_company_rule" model="ir.rule">
        <field name="name">Local Purchase Manufacturing Multi Company</field>
        <field name="model_id" ref="model_local_purchase"/>
        <field name="groups" eval="[(6,0, [ref('mrp.group_mrp_user')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="global" eval="False"/>
        <field name="domain_force">[
            '|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

  </odoo>
