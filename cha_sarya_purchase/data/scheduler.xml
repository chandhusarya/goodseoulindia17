<?xml version ="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record id="send_notification_for_pending_po" model="ir.cron">
            <field name="name">Send Notification For Pending PO</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_purchase_order" />
            <field name="state">code</field>
            <field name="code">model._send_notification_for_pending_po()</field>
            <field name="priority" eval="5" />
        </record>


        <record id="send_notification_for_pending_pi_update" model="ir.cron">
            <field name="name">Send Notification Pending PI Update</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_purchase_order" />
            <field name="state">code</field>
            <field name="code">model._send_notification_for_pending_pi()</field>
            <field name="priority" eval="5" />
        </record>

        <record id="send_email_to_vendor_to_share_documents" model="ir.cron">
            <field name="name">Send Email to Vendor to Share Documents</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_purchase_order" />
            <field name="state">code</field>
            <field name="code">model._send_email_to_vendors_for_documents()</field>
            <field name="priority" eval="5" />
        </record>


        <record id="send_email_to_update_bl_number_in_po" model="ir.cron">
            <field name="name">Send Email Update BL# in PO</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_purchase_order" />
            <field name="state">code</field>
            <field name="code">model._send_email_to_to_update_bl()</field>
            <field name="priority" eval="5" />
        </record>

        <record id="ir_cron_check_grn_pending" model="ir.cron">
        <field name="name">Check GRN Pending (>5 days)</field>
        <field name="model_id" ref="model_local_purchase"/>
        <field name="state">code</field>
        <field name="code">model.cron_check_grn_pending()</field>
        <field name="active">True</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>

    </data>
</odoo>
