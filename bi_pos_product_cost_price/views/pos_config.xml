<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="custom_bi_pos_product_cost_price_form_view">
        <field name="name">res.config.setting.form.product.cost.price.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_pricing_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="pos_show_product_cost"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_show_product_cost" string="Show Product Cost"/>
                        <div class="text-muted">
                            Show Product Cost Price On POS Screen.
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="pos_restrict_sale_below_cost"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_restrict_sale_below_cost" string="Restrict To Sale Below Cost"/>
                        <div class="text-muted">
                            Restrict To Validate Order If Sale Price Is Less Than Cost.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
