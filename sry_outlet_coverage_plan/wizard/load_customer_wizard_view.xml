<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sry_customer_load_wizard_view" model="ir.ui.view">
        <field name="name">sry.customer.load.wizard.view.form</field>
        <field name="model">sry.customer.load.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_ids" widget="many2many" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Load" name="button_load_customers" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sry_customer_load_wizard_action" model="ir.actions.act_window">
        <field name="name">Customer Wizard Action</field>
        <field name="res_model">sry.customer.load.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sry_customer_load_wizard_view"/>
        <field name="target">new</field>
    </record>
</odoo>