<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- wizard view -->
        <record id="sarya_reconcile_load_rebate_view" model="ir.ui.view">
            <field name="name">Sarya Reconcile Load Rebate</field>
            <field name="model">sarya.reconcile.load.rebate</field>
            <field name="arch" type="xml">
                <form name="Rebates">
                    <group name="details">
                        <field name="reconcile_id" column_invisible="True"/>
                        <field name="rebate_from"/>
                        <field name="rebate_to"/>
                    </group>
                    <footer>
                         <button name="load_rebates" string="Load"
                                 type="object" default_focus="1" class="oe_highlight"/>
                    </footer>

                </form>
            </field>
        </record>

       <record id="action_sarya_reconcile_load_rebate_wizard" model="ir.actions.act_window">
            <field name="name">Sarya Reconcile Load Rebate</field>
            <field name="res_model">sarya.reconcile.load.rebate</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
       </record>



    </data>
</odoo>