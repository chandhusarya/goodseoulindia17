    <record id="view_invoice_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_state']" position='after'>
               <field name="verified_for_reconcile"  widget="boolean_toggle" optional="show"/>
                <field name="verified_for_reconcile_by" optional="show"/>
            </xpath>
         </field>
    </record>

    <record id="action_verified_move_for_reconcile_from_list" model="ir.actions.server">
        <field name="name">Verify For Reconciliation</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.verified_move_for_reconcile()
        </field>
    </record>

    <record id="account_move_extended_tax_amount_form_view" model="ir.ui.view">
        <field name="name">account.move.extended.tax.amount.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="after">
                <field name="tax_amount"/>
            </xpath>
        </field>
    </record>


    <record id="account.menu_finance_reports" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('cha_sarya_account.can_view_finance_report')])]"/>
    </record>

</odoo>