<!--<?xml version="1.0" encoding="utf-8"?>-->
<odoo>

    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='accounting_info_group']" position="after">
                <group name="logistics" string="Logistics">
                    <field name="total_product_weight"/>
                    <field name="total_product_gross_weight"/>
                </group>
            </xpath>

            <xpath expr="//button[@name='button_set_checked']" position="after">
                <field name="ready_to_generate_ewaybill" invisible="1"/>
                <field name="l10n_in_edi_ewaybill_show_send_button" invisible="1"/>
                <button name="set_ready_to_generate_ewaybill" string="Inform WH to Generate eWayBill"
                        class="oe_highlight" type="object"
                        groups="account.group_account_invoice"
                        invisible="ready_to_generate_ewaybill or not l10n_in_edi_ewaybill_show_send_button"/>
            </xpath>

            <xpath expr="//button[@name='action_post'][2]" position="attributes">
                <attribute name="confirm">Please make sure if you want to fill Transporter ID or not</attribute>
            </xpath>


        </field>
    </record>

    <record id="invoice_form_inherit_l10n_in_edi_ewaybill_inherit_sarya" model="ir.ui.view">
        <field name="name">account.move.form.inherit.l10n.in.ewaybill</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_in_edi_ewaybill.invoice_form_inherit_l10n_in_edi_ewaybill"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_in_vehicle_no']" position="after">
                <field name="transport_id"/>
            </xpath>
        </field>
    </record>


