<odoo>

    <record id="view_material_request_tree" model="ir.ui.view">
        <field name="name">material.request.tree</field>
        <field name="model">material.request</field>
        <field name="arch" type="xml">
            <tree string="Material Request">
                <field name="name"/>
                <field name="requested_by"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_material_request_line_form" model="ir.ui.view">
        <field name="name">material.request.line.form</field>
        <field name="model">material.request.line</field>
        <field name="arch" type="xml">
            <form string="Material Request Line">
                <group>
                    <field name="request_id" invisible="1"/>
                    <label for="local_purchase"/>
                    <field name="local_purchase" widget="boolean_toggle" readonly="request_id.state == 'approved'"/>
                    <group string="Transfer Details">
                        <field name="is_transfered" invisible="1"/>
                        <field name="is_lpo_created" invisible="1"/>
                        <field name="product_id" readonly="is_transfered == True" options="{'no_create_edit': True, 'no_create': True}"/>
                        <field name="packaging_id" readonly="is_transfered == True" options="{'no_create_edit': True, 'no_create': True}"/>
                        <field name="primary_packaging_id" force_save="1" readonly="1"/>
                        <field name="location_id" readonly="is_transfered == True" required="local_purchase == False" options="{'no_create_edit': True, 'no_create': True}"/>
                        <field name="location_dest_id" domain="[('is_factory', '=', True)]" readonly="is_transfered == True" required="local_purchase == False" options="{'no_create_edit': True, 'no_create': True}"/>
                        <field name="requested_qty" readonly="is_transfered == True"/>
                        <field name="requested_qty_primary" readonly="1" force_save="1"/>
<!--                        <field name="available_qty"/>-->
                        <field name="transferred_qty"/>
                    </group>
                    <group string="LPO Details">
                        <field name="supplier_id" readonly="is_lpo_created == True" options="{'no_create_edit': True, 'no_create': True}"/>
                        <field name="picking_type_id" readonly="is_lpo_created == True"
                               options="{'no_create_edit': True, 'no_create': True}"
                               invisible="0"/>
                        <field name="balance_pkg_qty"/>
                        <field name="ordered_qty" readonly="is_lpo_created == True"/>
                    </group>
                </group>
                <notebook>
                    <page string="Details">
                        <field name="detail_ids" invisible="local_purchase == True" readonly="is_transfered == True" context="{'default_product_id':product_id, 'default_location_id':location_id}">
                            <tree editable="top">
                                <field name="product_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" required="1"/>
                                <field name="location_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" readonly="1"/>
                                <field name="quant_id" options="{'no_create_edit': True, 'no_create': True}"
                                       domain="[('product_id', '=', product_id), '|', ('location_id', 'in', [location_id]), ('location_id', 'child_of', location_id)]"/>
                                <field name="quantity"/>
                                <field name="product_uom_id" options="{'no_create_edit': True, 'no_create': True}" required="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="view_material_request_form" model="ir.ui.view">
        <field name="name">material.request.form</field>
        <field name="model">material.request</field>
        <field name="arch" type="xml">
            <form string="Material Request">
                <header>
                    <button string="Request" type="object" name="action_request" class="oe_highlight" invisible="state != 'draft'"/>
                    <button string="Approve" groups="sarya_factory.can_approve_mr" type="object" name="action_approve" class="oe_highlight" invisible="state != 'manager_approval'"/>
<!--                    <button string="Check Availability" type="object" name="action_check_availability" class="oe_highlight" invisible="state != 'approved'"/>-->
                    <button string="Transfer" type="object" name="action_transfer" class="oe_highlight" invisible="state != 'approved' or is_transfered == True"/>
                    <button string="Generate PO" type="object" name="action_create_po" class="oe_highlight" invisible="state != 'approved' or is_lpo_created == True"/>
                    <button string="Cancel" type="object" name="action_cancel" class="oe_highlight" invisible="state not in ('draft', 'manager_approval')"/>
                    <button string="Reset to Draft" type="object" name="action_reset" class="oe_highlight" invisible="state != 'approved' or is_transfered == True"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <div class="alert alert-warning" role="alert" invisible="state != 'approved' or is_transfered == True">
                   	Lot/Batch selected will not be reseved here, kindly create transfer to reserve the stock.
                </div>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_pickings" type="object" class="oe_stat_button" icon="fa-truck">
                            <field name="picking_count" widget="statinfo" string="Pickings"/>
                        </button>
                        <button name="action_view_lpos" type="object" class="oe_stat_button" icon="fa-shopping-cart">
                            <field name="lpo_count" widget="statinfo" string="LPOs"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="requested_by" readonly="1"/>
                        </group>
                        <group>
                            <field name="date" readonly="1"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Request Lines">
                            <field name="request_lines" readonly="state == 'approved'">
                                <tree editable="bottom">
                                    <field name="product_id" required="1" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="packaging_id" required="1" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="primary_packaging_id" column_invisible="1" force_save="1"/>
                                    <field name="requested_qty"/>
                                    <field name="requested_qty_primary" column_invisible="1" force_save="1"/>
<!--                                    <field name="available_qty"/>-->
                                    <field name="ordered_qty" readonly="1" optional="hide"/>
                                    <field name="transferred_pkg_qty" readonly="1" optional="hide"/>
<!--                                    <field name="supplier_id" options="{'no_create_edit': True, 'no_create': True}"/>-->
<!--                                    <field name="on_hand_qty"/>-->
                                    <button name="action_open_line_details" type="object" string="Details" icon="fa-eye"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Details">
                            <group>
<!--                                <group>-->
<!--                                    <field name="picking_type_id"/>-->
<!--                                    <field name="location_id"/>-->
<!--                                    <field name="location_dest_id"/>-->
<!--                                </group>-->
                                <group>
                                    <field name="is_transfered" readonly="1"/>
                                    <field name="is_lpo_created" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_material_request" model="ir.actions.act_window">
        <field name="name">Material Requests</field>
        <field name="res_model">material.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_material_request" name="Material Requests" action="action_material_request" parent="mrp.menu_mrp_manufacturing" sequence="11"/>


</odoo>