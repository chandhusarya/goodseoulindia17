<odoo>

    <record id="view_production_request_tree" model="ir.ui.view">
        <field name="name">production.request.tree</field>
        <field name="model">production.request</field>
        <field name="arch" type="xml">
            <tree string="Production Request">
                <field name="name"/>
                <field name="requested_by"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_production_request_line_form" model="ir.ui.view">
        <field name="name">production.request.line.form</field>
        <field name="model">production.request.line</field>
        <field name="arch" type="xml">
            <form string="Production Request Line">
                <group>
                    <field name="request_id" invisible="1"/>

                    <group>
                        <field name="is_transfered" invisible="1"/>
                        <field name="product_id" readonly="is_transfered == True" options="{'no_create_edit': True, 'no_create': True}"/>
                        <field name="packaging_id" readonly="is_transfered == True" options="{'no_create_edit': True, 'no_create': True}"/>
                        <field name="requested_qty" readonly="is_transfered == True"/>
                        <field name="primary_packaging_id" force_save="1" readonly="1"/>
                        <field name="requested_qty_primary" readonly="1" force_save="1"/>

                    </group>
                    <group>

                        <field name="on_hand_qty" force_save="1" readonly="1"/>
                        <field name="on_hand_qty_storage" readonly="1" force_save="1"/>
                        <field name="transferred_qty" readonly="1" force_save="1"/>
                        <field name="fryer_location_dest_id"
                               domain="[('is_factory_fryer_location','=',True)]"
                               readonly="is_transfered == True"
                               invisible="0"
                               options="{'no_create_edit': True, 'no_create': True}"/>

                        <field name="storage_location_id" readonly="is_transfered == True"  invisible="0" options="{'no_create_edit': True, 'no_create': True}"/>
                        <field name="production_location_id" readonly="is_transfered == True"  invisible="0" options="{'no_create_edit': True, 'no_create': True}"/>


                    </group>
                </group>
                <notebook>
                    <page string="Details">
                        <field name="detail_ids" readonly="is_transfered == True" context="{'default_product_id':product_id, 'default_storage_location_id':storage_location_id}">
                            <tree editable="top">
                                <field name="product_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" required="1" column_invisible="1"/>
                                <field name="storage_location_id" options="{'no_create_edit': True, 'no_create': True}" force_save="1" column_invisible="1"/>
                                <field name="quant_id" options="{'no_create_edit': True, 'no_create': True}"
                                       domain="[('product_id', '=', product_id), '|', ('location_id', 'in', [storage_location_id]), ('location_id', 'child_of', storage_location_id)]"/>
                                <field name="total_stock" readonly="1" force_save="1"/>
                                <field name="available_stock" readonly="1" force_save="1"/>
                                <field name="quantity"/>
                                <field name="product_uom_id" options="{'no_create_edit': True, 'no_create': True}" required="1" column_invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="view_production_request_form" model="ir.ui.view">
        <field name="name">production.request.form</field>
        <field name="model">production.request</field>
        <field name="arch" type="xml">
            <form string="Material Request">
                <header>
                    <button string="Request" type="object" name="action_request" class="oe_highlight" invisible="state != 'draft'"/>
                    <button string="Approve" groups="sarya_factory.can_approve_production_req" type="object" name="action_approve" class="oe_highlight" invisible="state != 'manager_approval'"/>

                    <button string="Transfer" groups="sarya_factory.can_transfer_production_req" type="object" name="action_transfer" class="oe_highlight" invisible="state != 'approved'"/>

                    <button string="Cancel" type="object" name="action_cancel" class="oe_highlight" invisible="state not in ('draft', 'manager_approval')"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <div class="alert alert-warning" role="alert" invisible="is_transfered == True">
                   	Lot/Batch selected will not be reseved here, kindly create transfer to reserve the stock.
                </div>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_pickings" type="object" class="oe_stat_button" icon="fa-truck">
                            <field name="picking_count" widget="statinfo" string="Pickings"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="requested_by" readonly="1"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="date" readonly="1"/>
                            <field name="stock_required_date" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Request Lines">
                            <field name="request_lines" readonly="state == 'approved'">
                                <tree editable="bottom">
                                    <field name="product_id" required="1" options="{'no_create_edit': True, 'no_create': True}"/>

                                    <field name="on_hand_qty" readonly="1" force_save="1"/>
                                    <field name="on_hand_qty_storage" readonly="1" force_save="1"/>

                                    <field name="packaging_id" required="1" readonly="1" force_save="1" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="primary_packaging_id" column_invisible="1" force_save="1"/>

                                    <field name="requested_qty"/>

                                    <field name="fryer_location_dest_id"
                                           readonly="is_transfered == True"
                                           invisible="0"
                                           domain="[('is_factory_fryer_location','=',True)]"
                                           options="{'no_create_edit': True, 'no_create': True}"/>

                                    <field name="requested_qty_primary"  readonly="1"  column_invisible="1" force_save="1"/>
                                    <field name="transferred_qty" readonly="1" force_save="1"/>
                                    <field name="is_transfered" invisible="1"/>
                                    <button name="action_open_line_details" type="object" string="Details" icon="fa-eye"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Details">
                            <group>
                                <group>
                                    <field name="is_transfered" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_production_request" model="ir.actions.act_window">
        <field name="name">Production Material Requests</field>
        <field name="res_model">production.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_production_request" name="Production Material Requests" action="action_production_request" parent="mrp.menu_mrp_manufacturing" sequence="11"/>


</odoo>