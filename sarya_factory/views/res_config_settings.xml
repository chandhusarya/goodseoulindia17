<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_config_settings_inherit" model="ir.ui.view">
        <field name="name">mrp.config.settings.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='mrp']" position="inside">
                <h2>Local Purchase</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" title="LPO Approver List.">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">LPO Approving Managers</span>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Managers" for="lpo_approver_user_ids"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="lpo_approver_user_ids" widget="many2many_tags" options="{'no_create_edit':True, 'no_create': True}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" title="Analytic Account.">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Analytic</span>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Analytic Account" for="factory_analytic_account_id"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="factory_analytic_account_id" options="{'no_create_edit':True, 'no_create': True}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
