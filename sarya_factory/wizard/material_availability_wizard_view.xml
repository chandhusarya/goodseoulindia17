<odoo>
    <record id="view_material_request_availability_wizard" model="ir.ui.view">
        <field name="name">material.request.availability.wizard.form</field>
        <field name="model">material.request.availability.wizard</field>
        <field name="arch" type="xml">
            <form string="Check Availability">
                <sheet>
                    <group>
                        <field name="request_id"/>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="availability_lines">
                                <tree editable="bottom">
                                    <field name="product_id" force_save="1"/>
                                    <field name="requested_qty" force_save="1"/>
                                    <field name="available_qty"/>
                                    <field name="transfer_qty"/>
                                    <field name="po_qty"/>
                                    <field name="on_hand_qty" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Create PO" type="object" name="action_create_purchase_order" class="oe_highlight"/>
                        <button string="Create Transfer" type="object" name="action_create_internal_transfer" class="oe_highlight"/>
                        <button string="Close" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>