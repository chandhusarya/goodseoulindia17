        <record id="email_template_send_documents_to_clearing_agent" model="mail.template">
            <field name="name">Send Document to Clearing Agent</field>
            <field name="model_id" ref="kg_sarya_inventory.model_shipment_advice"/>
            <field name="subject">Shipment to receive, Ref : {{ object.name }},  BL No : {{ object.bill_no or 'n/a' }}</field>
            <field name="partner_to">{{ object.clearing_agent.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear
                        <t t-out="object.clearing_agent.name or ''"></t>,
                        <br/>
                        <br/>
                             Please find the attached documents of the shipment
                        <br/>
                        <br/>
                        <strong>Vendor : <t t-out="object.vendor_id.name or ''"></t> </strong>
                        <br/>
                        Departure Date : <t t-out="object.departure_date or ''"></t>
                        <br/>
                        Expected Date : <t t-out="object.expected_date or ''"></t>
                        <br/>
                        Shipment No : <t t-out="object.shipment_no or ''"></t>
                        <br/>
                        Container No : <t t-out="object.container_no or ''"></t>
                        <br/>
                        BOE No : <t t-out="object.boe_number or ''"></t>
                        <br/>
                        BL No : <t t-out="object.bill_no or ''"></t>
                        <br/>
                        <br/>
                    </p>
                </div>
            </field>
            <field name="lang">{{ object.vendor_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>


