<odoo>
    <data>


        <record id="user_mail_template" model="mail.template">
            <field name="name">User Email Notification</field>
            <field name="email_from">{{object.create_uid.email}}</field>
            <field name="email_to">{{object.get_email_to()}}</field>
            <field name="subject">Invoice Created For Bill No : {{object.shipment_bill_number}}</field>
            <field name="model_id" ref="kg_sarya_inventory.model_account_move"/>
            <field name="body_html" type="html">
                <table style="padding-top:16px;background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;"
                       cellspacing="0" cellpadding="0" border="0">
                    <tbody>
                        <tr>
                            <td align="center">
                                <table style="padding:24px;background-color: white; color: #454748; border-collapse:separate;"
                                       width="590" cellspacing="0" cellpadding="0" border="0">
                                    <tbody>
                                        <tr>
                                            <td valign="middle">
                                                <span style="font-size: 20px; font-weight: bold;">
                                                    <span>Bill Generated</span>
                                                    <br/>
                                                </span>
                                            </td>

                                            <td valign="middle" align="right">
                                                <img style="padding:0px;margin: 0px; height: 48px;"
                                                     t-attf-src="/logo.png?company={{object.company_id.id }}"
                                                     alt="SARYA"/>
                                            </td>
                                        </tr>

                                        <tr>

                                            <td style="min-width:590px;" align="center">
                                                <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color:
                                white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                    <tr>
                                                        <td style="font-size: 13px;">
                                                            <div>
                                                                <p>Hi,
                                                                    <br/>
                                                                    &#160;An Invoice against bill no:
                                                                    <t t-out="object.shipment_bill_number"/>
                                                                    has been generated.
                                                                    <br/>
                                                                </p>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </table>

                                            </td>
                                        </tr>

                                        <tr>
                                            <td style="min-width:590px;padding: 0 8px 0 8px; font-size:11px;"
                                                align="center">
                                                <hr style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 4px 0px;"
                                                    width="100%"/>
                                                <b>
                                                    <span t-out="object.env.user.company_id.name"/>
                                                </b>
                                                <br/>
                                                <div style="color:#999999;">
                                                    <span t-out="object.env.user.company_id.phone"/>
                                                    |
                                                    <a style="color:#999999;"
                                                       t-attf-href="mailto:{{object.env.user.company_id.email}}">
                                                        <span t-out="object.env.user.company_id.email"/>
                                                    </a>

                                                    |
                                                    <a style="color:#999999;"
                                                       t-att-href="object.env.user.company_id.website">
                                                        <span t-out="object.env.user.company_id.website"/>
                                                    </a>

                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        <tr>
                        </tr>
                    </tbody>
                </table>
            </field>
        </record>

