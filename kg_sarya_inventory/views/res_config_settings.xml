<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_rental_modification" model="ir.ui.view">
        <field name="name">res.config.settings.invoice.modification</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']" position="inside">
                <h2>Rental and Leaflet Account</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" title="These taxes are set in any new product created.">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Promotion Journals</span>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                  aria-label="Values set here are company-specific."
                                  role="img"/>
                            <div class="text-muted">
                                Journals which should apply for the promotion
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Promotion Journal" for="promotion_journal_id"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="promotion_journal_id"
                                           domain="[('type', '=', 'sale')]"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" title="Choose an account for leaflet fees.">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Leaflet</span>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Leaflet Account" for="leaflet_fee_account_id"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="leaflet_fee_account_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" title="Choose an account for the rental">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Rental</span>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Rental Account" for="rental_fee_account_id"
                                           class="col-lg-3 o_light_label"/>
                                    <field name="rental_fee_account_id"/>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="email_users_config" model="ir.ui.view">
        <field name="name">Email Notification</field>
        <field name="model">res.config.settings</field>
        <field name="priority">1</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='barcode_setting_container']" position="after">
                <block title="Barcode" name="barcode_setting_container">
                    <h2>Shipment Advice</h2>
                    <div class="row mt16 o_settings_container" name="shipment_advice">
                        <div class="col-12 col-lg-6 o_setting_box" id="shipment_advice_id">
                            <div class="o_setting_right_pane">
                                <div class="o_widget">
                                    <p class="o_form_label">Email Notification Users</p>
                                    <div class="d-flex">
                                        <field name="email_notification_users" widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Notification Lot Expiring</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Notification For Lot Expiring</span>
                                <div class="text-muted">
                                    Add users to get notification if products lot is Expiring
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Mail Users" for="lot_mail_users_ids"
                                               class="col-lg-3 o_light_label"/>
                                        <field name="lot_mail_users_ids" widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </block>

            </xpath>
        </field>
    </record>
</odoo>