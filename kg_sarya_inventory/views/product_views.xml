<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_supplierinfo_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.tree.view</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
        <field name="arch" type="xml">
            <field name="product_uom" position="before">
                <field name="package_id" domain="[('product_id.product_tmpl_id', '=', parent.id)]"/>
                <field name="package_price"/>
            </field>
            <field name="product_uom" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="price" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="min_qty" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>


    <record id="product_supplierinfo_form_view_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.form.view</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
            <field name="discount" position="before">
                <label for="package_id"/>
                <div class="o_row">
                    <field name="package_id" domain="[('product_id.product_tmpl_id', '=', parent.id)]"/>
                    <field name="package_price"/>
                </div>
            </field>


        </field>
    </record>



       <record id="product_template_form_view_kg_sarya_inventory" model="ir.ui.view">
            <field name="name">product.template.form.inherit.kg_.sarya.inventory</field>
            <field name="model">product.template</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="detailed_type" position="after">
                    <field name="is_item_to_monitor"/>
                    <field name="carton_per_pallet"/>
                    <field name="landed_cost_ok"
                           invisible="type != 'service'"/>
                    <field name="bl_to_container_split"
                           invisible="not landed_cost_ok or type != 'service'"/>
                    <field name="is_a_custom_duty"
                           invisible="not landed_cost_ok"/>
                    <field name="is_a_freight_charge"
                           invisible="not landed_cost_ok"/>
                    <field name="split_method_landed_cost"
                           invisible="not landed_cost_ok or type != 'service'"/>
                </field>
                <field name="supplier_taxes_id" position="after">
                    <field name="landed_cost_custom_duty_perc"/>
                    <field name="landed_cost_taxes_id" colspan="2" widget="many2many_tags" invisible="1"/>
                </field>
        </field>
    </record>

    <record id="view_product_supplier_inherit" model="ir.ui.view">
        <field name="name">product.template.supplier.form.inherit</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="priority" position="after">
                <field name="pr_internal_ref" string="Product Reference"/>
            </field>
            <field name="taxes_id" position="after">
                <field name="product_tag_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <record id="sale.menu_product_template_action" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <!-- <record id="sale.menu_product" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record> -->

    <record id="sale.menu_products" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <record id="account.product_product_menu_purchasable" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <record id="account.product_product_menu_sellable" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <record id="quality_control.quality_product_menu_product_template" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>

    <record id="quality_control.quality_control_menu_product_variant" model="ir.ui.menu">
        <field name="active" eval="False"/>
    </record>


</odoo>
