    <record id="action_close_po" model="ir.actions.server">
        <field name="name">Close PO</field>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="binding_model_id" ref="kg_sarya_inventory.model_purchase_order"/>
        <field name="binding_view_types">list</field>
