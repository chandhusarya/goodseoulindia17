<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_line_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_packaging_qty']" position='attributes'>
                <attribute name="column_invisible">True</attribute>
            </xpath>
<!--            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position='attributes'>-->
<!--                <attribute name="options">{'no_create': True}</attribute>-->
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position='replace'>
                <field name="product_id" readonly="not product_updatable" required="not display_type" force_save="1" context="{'partner_id': parent.partner_id,'quantity': product_uom_qty,'pricelist': parent.pricelist_id,'uom':product_uom,'company_id': parent.company_id,'default_lst_price': price_unit,'default_description_sale': name}" options="{'no_open': True,'no_create': True}" domain="[('sale_ok', '=', True)]" widget="sol_product_many2one"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_packaging_id']" position='attributes'>
                <attribute name="required">1</attribute>
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_packaging_id']" position='before'>
                <field name="package_received"/>
                <field name="package_billed"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_packaging_id']" position='after'>
                <field name="product_packaging_qty" required="1"/>
                <field name="pkg_unit_price" required="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position='attributes'>
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position='attributes'>
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom']" position='attributes'>
                <attribute name="column_invisible">True</attribute>
            </xpath>

        </field>
    </record>


    <record id="view_invoice_line_form_inherit" model="ir.ui.view">
        <field name="name">account.move.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position='after'>
                <field name="package_id" domain="[('product_id','=',product_id)]"
                       readonly="parent.state not in ['draft','cancel']"/>
                <field name="product_packaging_qty"
                       readonly="parent.state not in ['draft','cancel']"/>
                <field name="pkg_unit_price"
                       readonly="parent.state not in ['draft','cancel']"/>
            </xpath>
            <!-- <xpath expr="//field[@name='line_ids']/tree/field[@name='quantity']" position='after'>
                <field name="package_id" invisible="1"/>
                <field name="product_packaging_qty" invisible="1"/>
                <field name="pkg_unit_price" invisible="1"/>
            </xpath> -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position='attributes'>
                <attribute name="invisible">1</attribute>
            </xpath>
            <field name="ref" position="after">
                <field name="invoice_origin"/>
            </field>
            <field name="ref" position="after">
                <field name="shipment_bill_number" invisible="1"/>
                <field name="user_config" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>