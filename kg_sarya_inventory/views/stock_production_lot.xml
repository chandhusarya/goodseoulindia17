<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_production_lot_form_inherit" model="ir.ui.view">
        <field name="name">stock.production.lot.inherit</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="before">
                <label for="available_qty"
                       invisible="not display_complete"/>
                <div class="o_row" invisible="not display_complete">
                    <field name="available_qty"/>
                    <field name="primary_packaging_id" groups="uom.group_uom"/>
                </div>
                <field name="purchase_cost"/>
                <field name="landed_cost"/>
                <field name="final_cost"/>
                <field name="fixed_discount"/>
                <field name="additional_discount"/>
                <field name="final_cost_after_discount"/>
            </field>

            <xpath expr="//div[hasclass('oe_button_box')]" position="after">
                <field name="active" invisible="1"/>
                <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                        invisible="active"/>
            </xpath>

        </field>
    </record>

    <!--    toggle action for archiving record-->
    <record id="view_stock_production_lot_list_inherit" model="ir.ui.view">
        <field name="name">stock.production.lot.list.inherit</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <field name="last_delivery_partner_id" position="after">
                <field name="active" widget="boolean_toggle"/>
            </field>
        </field>
    </record>

    <!--    filter to see archived records-->
    <record id="view_stock_production_lot_filter_inherit" model="ir.ui.view">
        <field name="name">stock.production.lot.filter.inherit</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.search_product_lot_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='expiration_alerts']" position="after">
                <filter string="Archived" name="active"
                        domain="[('active','=', False)]"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_production_lot_tree_inherit" model="ir.ui.view">
        <field name="name">stock.production.lot.inherit</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <field name="product_id" position="before">
                <field name="available_qty"/>
                <field name="primary_packaging_id" groups="uom.group_uom"/>
            </field>
            <xpath expr="//field[@name='create_date']" position='attributes'>
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>

     <!--    field inheriting to journal entry for linking shipment -->
    <record id="view_account_journal_form_inherit" model="ir.ui.view">
        <field name="name">account.journal.entry.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!--            <field name="sale_order_customer_id" position="after">-->
            <!--                <field name="shipment_id"/>-->
            <!--            </field>-->
            <xpath expr="//div[@name='journal_div']" position='after'>
                <field name="shipment_id" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>


    <record id="mrp_bom_form_view_inherited_kg_sarya" model="ir.ui.view">
        <field name="name">mrp.bom.form.inherited.kg.sarya</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="primary_packaging_id"/>
            </xpath>
            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_uom_id']" position="before">
                <field name="primary_packaging_id"/>
            </xpath>
        </field>
    </record>

</odoo>