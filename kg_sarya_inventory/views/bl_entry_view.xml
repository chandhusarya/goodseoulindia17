<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bl_entry_form" model="ir.ui.view">
        <field name="name">bl.entry.form</field>
        <field name="model">bl.entry</field>
        <field name="arch" type="xml">
            <form string="BL Entry">
                <header>
                    <field name="shipment_advice_count" invisible="1"/>
                    <field name="is_pending_to_invoice" invisible="1"/>
                    <field name="is_docs_send_to_agent" invisible="1"/>

                    <button name="generate_bill"
                            class="oe_highlight"
                            confirm="System will generate bill for all received items"
                            invisible="not is_pending_to_invoice"
                            string="Generate Bill"
                            type="object"/>

                    <button name="ready_to_enter_container_details"
                            class="oe_highlight"
                            confirm="Ready to enter Container Details"
                            invisible="state != 'draft'"
                            string="Ready for Item Details"
                            type="object"/>

                    <button name="mark_container_entry_completed"
                            class="oe_highlight"
                            confirm="Is Container details entry completed?"
                            invisible="state != 'container'"
                            string="BL Entry Completed"
                            type="object"/>


                    <button name="do_procurement_approval"
                            class="oe_highlight"
                            confirm="Are you Sure?"
                            invisible="state != 'procurement_approval'"
                            groups="kg_sarya_inventory.do_bl_procurement_approval"
                            string="Approve"
                            type="object"/>

                    <button name="do_finance_approval"
                            class="oe_highlight"
                            confirm="Are you Sure?"
                            invisible="state != 'finance_approval'"
                            groups="kg_sarya_inventory.can_approve_commercial_invoice_wms"
                            string="Approve"
                            type="object"/>

                    <!-- <button name="action_sent_finance_approval"
                            class="oe_highlight"
                            confirm="Please make sure you have input the item quantities and amounts from the BL into the system?"
                            invisible="state != 'draft'"
                            string="Confirm"
                            type="object"/>

                    <button name="action_do_finance_approval"
                            class="oe_highlight"
                            invisible="state != 'waiting_finance_approval'"
                            string="Approve"
                            groups="kg_sarya_inventory.can_approve_commercial_invoice_wms"
                            type="object"/> -->

                    <button name="send_documents_to_clearing_agent"
                            string="Send documents to clearing agent"
                            class="oe_highlight"
                            confirm="Please make sure you have uploaded all documents"
                            type="object"
                            invisible="is_docs_send_to_agent"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,confirm" readonly="1"/>
                </header>
                <sheet>

                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_shipment_advice" type="object"
                                icon="fa-money" invisible="shipment_advice_count == 0">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Shipment Advices</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" name="action_view_bills" type="object"
                                icon="fa-money" invisible="shipment_advice_count == 0">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Bills</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon"
                            title="Price Not Matching"
                            bg_color="bg-danger"
                            invisible="not is_price_not_matching"/>

                    <widget name="web_ribbon"
                            title="Qty Not Matching"
                            bg_color="bg-danger"
                            invisible="is_qty_not_matching != True"/>

                    <group>
                        <group>
                            <field name="purchase_ids" widget="many2many_tags"
                                   readonly="state != 'draft'"/>
                            <field name="name" readonly="1" force_save="1"/>
                            <field name="po_type" invisible="1"/>

                            <field name="clearing_agent"
                                   domain="[('is_clearing_agent', '=' , True)]"
                                   invisible="po_type == 'local'"/>

                            <field name="doc_clearing_agent"
                                   domain="[('is_clearing_agent', '=' , True)]"
                                   invisible="po_type == 'local'"/>

                            <field name="user_id" readonly="1" force_save="1"/>
                            <field name="number_of_container"
                                   invisible="po_type == 'local'"/>
                            <field name="container_type" invisible="po_type == 'local'"/>
                            <field name="container_volume" invisible="po_type == 'local'"/>
                        </group>
                        <group>
                            <field name="po_type" required="1"/>
                            <field name="is_stock_unloaded_in_outside_warehouse" widget="boolean_toggle" invisible="1"/>
                            <group>
                                <field name="bl_entry_container_ids"
                                       nolabel="1"
                                       nvisible="po_type == 'local'"
                                       colspan="4">
                                    <tree editable="bottom">
                                        <field name="container_sequence" readonly="1" force_save="1"
                                               column_invisible="True"/>
                                        <field name="container_number"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="purchase_ids" widget="many2many_tags"
                                   readonly="state != 'draft'"/>
                            <field name="vendor_id" required="1"
                                   readonly="state != 'draft'"/>
                            <field name="departure_date" string="ETD"/>
                            <field name="expected_date" string="ETA"/>
                            <field name="bl_date"/>

                            <field name="lock_cost_entry" invisible="1"/>

                        </group>
                        <group>
                            <field name="shipment_no"
                                   readonly="state == 'done'"
                                   required="1"/>
                            <field name="boe_number" readonly="state == 'done'"/>
                            <field name="boe_date" readonly="state == 'done'"/>
                            <field name="zdlm"/>
                            <field name="l10n_in_gst_treatment"/>
                        </group>
                    </group>


                    <group>
                        <field name="is_price_not_matching" invisible="1"/>
                        <field name="is_qty_not_matching" invisible="1"/>
                    </group>

                    <group>
                        <field name="document_missing"/>
                    </group>


                    <notebook>
                        <page string="Container Details" invisible="state == 'draft'">
                            <field name="bl_entry_lines"
                                   invisible="state == 'draft'"
                                   readonly="state != 'container'"
                                   context="{'default_allowed_purchase_ids' : purchase_ids}">
                                <tree decoration-danger="is_price_not_matching">
                                    <field name="is_price_not_matching" column_invisible="True"/>
                                    <field name="container_id"/>
                                    <field name="currency_id" column_invisible="True"/>
                                    <field name="purchase_ids" widget="many2many_tags"/>
                                    <field name="product_id"/>
                                    <field name="product_packaging_id"/>
                                    <field name="balance_po_qty" invisible="1"/>
                                    <field name="po_qty" readonly="1" force_save="1"/>
                                    <field name="po_foc_qty" readonly="1" force_save="1"/>
                                    <field name="bl_qty" sum="bl_qty"/>
                                    <field name="foc_qty" sum="foc_qty"/>
                                    <field name="bl_price" sum="bl_price"/>
                                    <field name="bl_total_price" sum="bl_total_price"/>
                                    <field name="additional_discount"/>
                                </tree>
                                <form>


                                    <field name="show_waring_msg" invisible="1"/>
                                    <span invisible="not show_waring_msg">**Price and Qty
                                        is applying for all Purchase Order selected in BL
                                    </span>

                                    <group>
                                        <field name="allowed_purchase_ids" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                    <group>
                                        <group>
                                            <field name="container_id"
                                                   options="{'no_edit': True, 'no_create': True}"
                                                   domain="[('bl_entry_id', '=' , parent.id)]"
                                                   required="1"/>
                                        </group>
                                        <group>
                                            <field name="purchase_ids"
                                                   options="{'no_edit': True, 'no_create': True}"
                                                   widget="many2many_tags"/>
                                        </group>
                                    </group>
                                    <group string="Details">
                                        <group>

                                            <field name="product_id" required="1"
                                                   options="{'no_edit': True, 'no_create': True}"
                                                   context="{'filter_products_in_bl_allowed' : allowed_purchase_ids, 'filter_products_in_bl_selected' : purchase_ids}"/>
                                            <field name="product_packaging_id" required="1"/>
                                        </group>
                                        <group></group>
                                        <group string="Pricing">
                                            <field name="balance_po_qty" column_invisible="True" readonly="1"
                                                   force_save="1"/>
                                            <field name="po_qty" readonly="1" force_save="1"/>
                                            <field name="po_foc_qty" readonly="1" force_save="1"/>
                                            <field name="bl_qty" readonly="1" force_save="1"/>
                                            <field name="bl_price"/>
                                            <field name="bl_total_price" readonly="1" force_save="1"/>
                                        </group>

                                        <group string="Discounts">
                                            <field name="lpo_price" readonly="1" force_save="1"/>
                                            <field name="fixed_discount_amount" readonly="1" force_save="1"/>
                                            <field name="price_after_fixed_discount" readonly="1" force_save="1"/>
                                            <field name="additional_discount" readonly="1" force_save="1"/>
                                        </group>
                                    </group>

                                    <field name="qty_details" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="expiry_date"/>
                                            <field name="production_date"/>
                                            <field name="qty_to_receive"/>
                                            <field name="foc_qty"/>
                                        </tree>
                                    </field>
                                    <span class="o_form_label">Total Quantity = Qty to Receive + FOC Qty</span>

                                </form>
                            </field>
                            <group>
                                <field name="po_qty"/>
                                <field name="po_foc_qty"/>
                            </group>
                        </page>
                        <page string="BL Costs" invisible="state == 'draft'">

                            <div class="oe_title">
                                <h4>
                                    <span>You cannot edit the cost because the shipment advice has already been
                                        finalized for landed costing
                                    </span>
                                </h4>
                            </div>

                            <notebook>
                                <page string="Normal Costs">
                                    <field name="bl_entry_costs"
                                           nolabel="1"
                                           readonly="lock_cost_entry">
                                        <tree editable="bottom" decoration-danger="type == 'estimation'">
                                            <field name="type"/>
                                            <field name="partner_id" domain="[('supplier_rank', '>=' , 1 )]"/>
                                            <field name="invoice_date"/>
                                            <field name="inv_no"/>
                                            <field name="product_id"
                                                   context="{'filter_incoterm_landed_cost_purchase' : parent.purchase_ids}"
                                                   domain="[('landed_cost_ok', '=', True)]"/>
                                            <field name="split_method"/>
                                            <field name="account_id" readonly="1" force_save="1"/>
                                            <field name="amount"
                                                   sum="Amount"/>
                                            <field name="tax_ids"
                                                   domain="[('type_tax_use', '=', 'purchase')]"/>
                                            <field name="total_amount"
                                                   readonly="1"
                                                   force_save="1"
                                                   sum="Total Amount"/>

                                            <field name="state"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Customs Duty">

                                    <group>
                                        <group>
                                            <field name="customs_vendor_id"/>
                                        </group>
                                        <group>
                                            <field name="customs_bill_date"/>
                                            <field name="customs_inv_number"/>
                                        </group>
                                    </group>

                                    <field name="bl_entry_costs_customs"
                                           nolabel="1" readonly="lock_cost_entry">
                                        <tree editable="bottom">
                                            <field name="container_id"
                                                   options="{'no_edit': True, 'no_create': True}"
                                                   domain="[('bl_entry_id', '=' , parent.id)]"
                                                   required="1"/>
                                            <field name="product_id"
                                                   options="{'no_edit': True, 'no_create': True}"
                                                   context="{'filter_custom_duty_of_product' : container_id}"/>
                                            <field name="account_id" required="1"/>
                                            <field name="assess_amount"/>
                                            <field name="bcd_percent"/>
                                            <field name="bcd_amount" readonly="1" force_save="1" sum="bcd_amount"/>
                                            <field name="sws_percent"/>
                                            <field name="sws_amount" readonly="1" force_save="1" sum="sws_amount"/>
                                            <field name="tax_ids"/>
                                             <field name="vat_amount" readonly="1" force_save="1" sum="vat_amount"/>
                                            <field name="total_amount_landed_cost" readonly="1"
                                                   force_save="1" sum="total_amount_landed_cost"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </page>
                        <page string="Documents" name="attachments" invisible="state == 'draft'">
                            <field name="attachment_ids" nolabel="1">
                                <tree editable="bottom" delete="false">
                                    <field name="purchase_order_id"/>
                                    <field name="document_name" string="Document Name" required="1"/>
                                    <field name="doc_attachment_partner"
                                           widget="many2many_binary"
                                           string="Attachments"/>
                                    <field name="expiry" required="0"/>
                                    <field name="is_required" readonly="1" widget="boolean_toggle"/>
                                    <field name="override_doc" widget="boolean_toggle" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="notes" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Accounts" invisible="state == 'draft'">
                            <group>
                                <field name="foc_credit_account_id"/>
                            </group>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="bl_entry_tree" model="ir.ui.view">
        <field name="name">bl.entry.tree</field>
        <field name="model">bl.entry</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <tree string="Landed Cost to Apply" default_order="id desc">
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="total_price"/>
                <field name="currency_id"/>
                <field name="boe_date"/>
                <field name="boe_number"/>
                <field name="shipment_no"/>
                <field name="bl_date"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="document_missing"/>
                <field name="purchase_ids" widget="many2many_tags" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="bl_entry_action" model="ir.actions.act_window">
        <field name="name">BL Entry</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bl.entry</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="bl_entry_tree"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="bl_entry_menu"
              name="BL Entry"
              sequence="21"
              parent="kg_sarya_inventory.shipment_advice_root_menu"
              action="bl_entry_action"/>

</odoo>
