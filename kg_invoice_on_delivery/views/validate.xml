<odoo>
  <data>
    <!-- Include invoice creation button in delivery order -->

      <record id="view_picking_form_inh" model="ir.ui.view">
        <field name="name">stock.picking.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_validate']" position='after'>
                <field name="invoice_status" invisible="1"/>
                <field name="confirm_status" invisible="1"/>
                <!-- <button name="button_confirm" class="oe_highlight" string="Confirm" type="object"
                        invisible="invoice_status != 0 or sale_id == False"/> -->

                <field name="sale_id" invisible="1"/>
                <button name="action_create_invoice" string="Create Invoice"
                        type="object"  data-hotkey="q"
                        invisible="invoice_status == 0 or sale_id == False"/>
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position='after'>
                        <field name="payment_term_id"
                               readonly="state in ('done','cancel')"/>
                        <field name="invoice_id" invisible="1"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="invoice_status" invisible="1"/>
               <button name="view_invoice"
                       invisible="invoice_status == 0 or state != 'done' or picking_type_code == 'incoming'"
                       class="oe_stat_button" icon="fa-pencil-square-o" type="object" help="View invoice">
                            <div class="o_form_field o_stat_info" >
                                <span class="o_stat_text">Invoice</span>
                            </div>
                        </button>
                </xpath>
            
        </field>
    </record>


    <record id="view_picking_search_inh" model="ir.ui.view">
        <field name="name">stock.picking.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position='after'>
                <field name="invoice_id" />
            </xpath> 
        </field>
    </record>


    <record id="view_tree_delivery_invoice_inherit" model="ir.ui.view">
        <field name="name">stock.picking.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/> 
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="invoice_id" optional="show"/>
            </field>
        </field>
    </record>

